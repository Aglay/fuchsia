import("//third_party/flatbuffers/flatbuffer.gni")

flatbuffer("commit_pack_flatbuffer") {
  sources = [
    "$peridot_sdk_fidl/fuchsia.ledger.cloud/serialized_commits.fbs",
  ]
}

source_set("commit_pack") {
  sources = [
    "commit_pack.cc",
    "commit_pack.h",
  ]

  deps = [
    ":commit_pack_flatbuffer",
    "//peridot/lib/convert",
  ]

  public_deps = [
    "$peridot_sdk_fidl/fuchsia.ledger.cloud",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "commit_pack_unittest.cc",
  ]

  deps = [
    ":commit_pack",
    "//third_party/googletest:gtest",
  ]
}
