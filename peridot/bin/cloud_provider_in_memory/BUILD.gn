import("//build/package.gni")

visibility = [
  "//peridot/bin/ledger/*",
  ":*",
]

source_set("lib") {
  sources = [
    "fake_cloud_provider.cc",
    "fake_cloud_provider.h",
    "fake_device_set.cc",
    "fake_device_set.h",
    "fake_page_cloud.cc",
    "fake_page_cloud.h",
    "types.h",
  ]

  public_deps = [
    "//garnet/public/lib/callback",
    "//garnet/public/lib/fxl",
    "//peridot/bin/ledger/fidl/include",
    "//peridot/lib/commit_pack",
  ]

  deps = [
    "//peridot/bin/ledger/fidl_helpers",
    "//peridot/lib/convert",
    "//sdk/fidl/fuchsia.ledger.cloud",
    "//third_party/murmurhash",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

executable("app") {
  output_name = "cloud_provider_in_memory"

  sources = [
    "app.cc",
  ]

  deps = [
    ":lib",
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fxl",
    "//peridot/lib/rng:system",
    "//sdk/fidl/fuchsia.modular",
    "//sdk/lib/fidl/cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/trace-provider",
  ]
}

package("cloud_provider_in_memory") {
  deps = [
    ":app",
  ]

  binary = "cloud_provider_in_memory"

  meta = [
    {
      path = rebase_path("cloud_provider_in_memory.cmx")
      dest = "cloud_provider_in_memory.cmx"
    },
  ]
}

group("tests") {
  testonly = true

  public_deps = [
    "//peridot/bin/cloud_provider_in_memory/validation",
  ]
}
