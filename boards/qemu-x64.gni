import("emulation_commons.gni")

target_cpu = "x64"

board_name = "qemu-x64"

board_bootfs_labels = [ "//src/security/policy/zxcrypt:null" ]
board_bootfs_labels += emulation_x64_bootfs_deps

board_zedboot_bootfs_labels = [ "//src/security/policy/zxcrypt:null" ]
board_zedboot_bootfs_labels += emulation_x64_bootfs_deps

board_recovery_bootfs_labels = [ "//src/security/policy/zxcrypt:null" ]
board_recovery_bootfs_labels += emulation_x64_bootfs_deps

board_package_labels = [
  "//garnet/bin/power_manager",
  "//garnet/bin/power_manager:base_config",
  "//garnet/bin/thermd",
  "//garnet/bin/thermd:config",

  # Include all drivers for now.
  "//garnet/packages/prod:drivers",
  "//src/hwinfo:default_board_config",
  "//src/media/audio/bundles:virtual_audio_driver",
]

max_fuchsia_zbi_size = "16777216"  # 16 MiB
max_zedboot_zbi_size = "16777216"  # 16 MiB

add_qemu_to_build_archives = true
