{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$comment": "This schema is used to whitelist access to the 'deprecate-global-persistent-storage' sandbox feature.",
  "properties": {
    "sandbox": {
      "type": "object",
      "properties": {
        "features": {
          "type": "array",
          "items": {
            "not": {
              "enum": ["deprecated-global-persistent-storage"]
            }
          }
        }
      }
    }
  }
}
