{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$comment": "This schema is used as an allowlist for the 'deprecated-data' value of the 'system' capability.",
  "properties": {
    "sandbox": {
      "type": "object",
      "properties": {
        "system": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "not": {
                  "pattern": "^/*deprecated-data$"
                }
              },
              {
                "not": {
                  "pattern": "^/*deprecated-data/"
                }
              }
            ]
          }
        }
      }
    }
  }
}
