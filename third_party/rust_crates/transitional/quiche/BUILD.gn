import("//build/rust/rustc_library.gni")

rustc_library("quiche") {
  name = "quiche"
  edition = "2018"
  source_root = "//third_party/rust-mirrors/quiche/src/lib.rs"
  configs -= [ "//build/config:rust_2018_idioms" ]
