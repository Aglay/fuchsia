import("//build/test/test_package.gni")

group("tests") {
  testonly = true
  deps = [
    ":integration-tests",
    "src:unit-tests($host_toolchain)",
  ]
}

test_package("integration-tests") {
  deps = [
    "hlcpp-tests",
    "rust-tests",
  ]

  tests = [
    {
      name = "rust_tests"
    },
    {
      name = "hlcpp-tests"
    },
  ]
}
