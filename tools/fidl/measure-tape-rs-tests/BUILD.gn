import("//build/rust/rustc_test.gni")
import("//build/test/test_package.gni")
import("//tools/fidl/measure-tape/measure-tape.gni")

test_package("measure-tape-rs-tests") {
  deps = [ ":rust_tests" ]

  tests = [
    {
      name = "rust_tests"
    },
  ]
}

rustc_test("rust_tests") {
  edition = "2018"
  deps = [
    "//src/lib/fidl/rust/fidl",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//tools/fidl/measure-tape-tests:measuretape-rustc",
  ]

  non_rust_deps = [ ":measure_tape_for_toplevelunion" ]
}

measure_tape("measure_tape_for_toplevelunion") {
  target_binding = "rust"
  target_type = "measuretape/TopLevelUnion"
  fidls = [ "//tools/fidl/measure-tape-tests:measuretape" ]
}
