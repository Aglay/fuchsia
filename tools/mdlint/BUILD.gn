import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")
import("//build/go/go_test.gni")
import("//build/testing/host_test_data.gni")

go_library("gopkg") {
  name = "go.fuchsia.dev/tools/mdlint"
  sources = [
    "main.go",
    "mdhelpers.go",
    "mdhelpers_test.go",
    "recognizer.go",
    "recognizer_test.go",
    "reporter.go",
    "reporter_test.go",
    "rules.go",
    "tokenizer.go",
    "tokenizer_test.go",
  ]
}

go_binary("mdlint") {
  gopackage = "go.fuchsia.dev/tools/mdlint"
  deps = [ ":gopkg" ]
}

go_test("mdlint_tests") {
  gopackages = [ "go.fuchsia.dev/tools/mdlint" ]
  deps = [
    ":gopkg",
    "//third_party/golibs:github.com/google/go-cmp",
  ]
}

install_host_tools("host") {
  deps = [ ":mdlint" ]
  outputs = [ "mdlint" ]
}

group("tests") {
  testonly = true
  deps = [ ":mdlint_tests($host_toolchain)" ]
}
