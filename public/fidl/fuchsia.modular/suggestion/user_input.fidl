library fuchsia.modular;

enum InputType {
  TEXT = 0;
  SPEECH = 1;
};

struct UserInput {
  InputType type = TEXT;
  string text;
  // Future evolutions of this struct may include alternate data formats, at
  // which point I'd like to rename text to string_value and make it optional.
};
