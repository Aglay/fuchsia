group("cpp") {
  deps = [
    ":json",
  ]
}

source_set("json") {
  sources = [
    "json.cc",
    "json.h",
  ]

  public_deps = [
    "//garnet/public/lib/fxl",
    "//third_party/rapidjson",
  ]
}

source_set("json_unittest") {
  testonly = true

  sources = [
    "json_unittest.cc",
  ]

  deps = [
    ":json",
    "//third_party/googletest:gtest",
    "//third_party/rapidjson",
  ]
}
