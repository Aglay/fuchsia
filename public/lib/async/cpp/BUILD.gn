source_set("future") {
  sources = [
    "future.cc",
    "future.h",
  ]

  public_deps = [
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/async-default",
  ]
}

source_set("operation") {
  sources = [
    "operation.cc",
    "operation.h",
  ]

  public_deps = [
    ":future",
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/trace",
  ]

  deps = [
    "//garnet/public/lib/fsl",
  ]
}

group("unittests") {
  testonly = true

  deps = [
    ":future_unittest",
    ":operation_unittest",
  ]
}

source_set("future_unittest") {
  testonly = true

  sources = [
    "future_unittest.cc",
  ]

  deps = [
    ":future",
    "//third_party/googletest:gtest",
  ]
}

source_set("operation_unittest") {
  testonly = true

  sources = [
    "operation_unittest.cc",
  ]

  deps = [
    ":operation",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/gtest",
    "//third_party/googletest:gtest",
  ]
}
