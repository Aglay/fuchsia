import("//apps/test_runner/test.gni")

source_set("timeline") {
  sources = [
    "fidl_type_conversions.cc",
    "fidl_type_conversions.h",
  ]

  public_deps = [
    ":host_compatible",
  ]

  deps = [
    "//garnet/public/lib/media/fidl",
    "//garnet/public/lib/ftl",
  ]
}

source_set("host_compatible") {
  sources = [
    "timeline.h",
    "timeline_function.cc",
    "timeline_function.h",
    "timeline_rate.cc",
    "timeline_rate.h",
  ]

  deps = [
    "//garnet/public/lib/ftl",
  ]
}

test("tests") {
  output_name = "media_lib_timeline_tests"

  sources = [
    "test/timeline_function_test.cc",
    "test/timeline_rate_test.cc",
  ]

  deps = [
    ":timeline",
    "//garnet/public/lib/mtl",
  ]
}
