source_set("cpp") {
  sources = [
    "scope.cc",
    "scope.h",
    "test_runner.cc",
    "test_runner.h",
    "test_runner_store_impl.cc",
    "test_runner_store_impl.h",
  ]

  public_deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/test_runner/fidl:fidl_sync",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/fsl",
    "//third_party/rapidjson",
  ]
}

source_set("application_context") {
  testonly = true

  sources = [
    "application_context.cc",
    "application_context.h",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
  ]
}

# Drop this into a gtest executable target as a dependency and it will run all
# of the tests and report results to the TestRunner service.
source_set("gtest_main") {
  testonly = true
  sources = [
    "gtest_main.cc",
  ]
  deps = [
    "//garnet/public/lib/test_runner/cpp/reporting",
    "//garnet/public/lib/test_runner/cpp:application_context",
  ]
  public_deps = [
    "//third_party/gtest",
  ]
}
