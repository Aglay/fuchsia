module mozart;

// Allows clients of Presenter.Present() to control a presentation.
// Experimental.
interface Presentation {
  // Enable or disable clipping for the Scenic renderer associated with the
  // presentation.
  EnableClipping(bool enabled);

  UseOrthographicView();
  UsePerspectiveView();
};
