static_library("sketchy") {
  defines = [ "VULKAN_HPP_NO_EXCEPTIONS" ]

  sources = [
    "cubic_bezier.cc",
    "cubic_bezier.h",
    "debug_print.h",
    "page.cc",
    "page.h",
    "stroke.cc",
    "stroke.h",
    "stroke_fitter.cc",
    "stroke_fitter.h",
    "stroke_segment.cc",
    "stroke_segment.h",
    "types.h",
  ]

  deps = [
    "//garnet/lib/escher/escher",
    "//garnet/lib/escher/examples/common",
  ]

  include_dirs = [
    "//lib",  # for fxl/
    "//garnet/lib/escher",
    "//garnet/lib/escher/examples/sketchy",
    "//third_party/glm",
  ]

  if (is_fuchsia) {
    deps += [ "//garnet/lib/magma:vulkan" ]
  }

  if (is_linux) {
    configs += [ "//garnet/lib/escher:vulkan_linux" ]
  }
}
