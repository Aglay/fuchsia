# trace is a helper library for talking to the
# mojo tracing service (see tracing.mojo).
source_set("types") {
  sources = [
    "internal/trace_types.h",
  ]
}

source_set("trace") {
  sources = [
    "trace_event.h",
    "internal/categories_matcher.h",
    "internal/categories_matcher.cc",
    "internal/trace_writer.h",
    "internal/trace_writer.cc",
  ]

  deps = [
    ":types",
    "//lib/ftl",
    "//lib/mtl:mtl_with_mojo",
    "//apps/tracing/services",
    "//mojo/public/cpp/application",
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/environment",
    "//mojo/public/cpp/system",
    "//mojo/public/interfaces/application",
  ]
}

source_set("provider") {
  sources = [
    "trace_provider.h",
    "trace_provider.cc",
  ]

  deps = [
    ":trace",
    "//lib/ftl",
    "//lib/mtl:mtl_with_mojo",
    "//apps/tracing/services",
    "//mojo/public/cpp/application",
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/environment",
    "//mojo/public/cpp/system",
    "//mojo/public/interfaces/application",
  ]
}

source_set("reader") {
  sources = [
    "trace_reader.h",
    "trace_reader.cc",
  ]

  deps = [
    ":trace",
    ":types",
    "//lib/ftl",
  ]
}

executable("trace_event_tests") {
  testonly = true

  sources = [
    "tests/categories_matcher_unittest.cc",
    "tests/main.cc",
    "tests/trace_writer_unittest.cc",
  ]

  deps = [
    ":trace",
    ":reader",
    "//apps/tracing/services",
    "//mojo/public/cpp/application:test_support",
    "//mojo/system",
    "//third_party/gtest",
    "//third_party/rapidjson",
  ]
}
