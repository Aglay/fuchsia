import("$zx_build/public/gn/migrated_targets.gni")

zx_library("cpuid") {
  kernel = true
  sources = [ "cpuid.cc" ]

  public_deps = [
    # <arch/x86/cpuid.h> has #include <ktl/optional.h>.
    "$zx/kernel/lib/ktl:headers",
  ]

  deps = [
    ":test",
    "$zx/system/ulib/fbl",
  ]
}

source_set("test") {
  # TODO(fxbug.dev/67010): testonly = true
  sources = [ "cpuid_test.cc" ]
  deps = [ "$zx/kernel/lib/unittest" ]
  public_deps = [ ":headers" ]
}
