library zz;

[Transport="Syscall"]
protocol Socket {
    /// Create a socket.
    Create(uint32 options) -> (status status, handle out0, handle out1);

    /// Write data to a socket.
    /// Rights: handle must be of type ZX_OBJ_TYPE_SOCKET and have ZX_RIGHT_WRITE.
    Write(handle<socket> handle, uint32 options, vector_void buffer) ->
        (status status, optional_usize actual);

    /// Read data from a socket.
    /// Rights: handle must be of type ZX_OBJ_TYPE_SOCKET and have ZX_RIGHT_READ.
    Read(handle<socket> handle, uint32 options) ->
        (status status, vector_void buffer, optional_usize actual);

    /// Prevent reading or writing.
    /// Rights: handle must be of type ZX_OBJ_TYPE_SOCKET and have ZX_RIGHT_WRITE.
    Shutdown(handle<socket> handle, uint32 options) -> (status status);
};
