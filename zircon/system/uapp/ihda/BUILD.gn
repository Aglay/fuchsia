executable("ihda") {
  sources = [
    "ihda.cpp",
    "intel_hda_codec.cpp",
    "intel_hda_controller.cpp",
    "intel_hda_device.cpp",
    "print_codec_state.cpp",
    "zircon_device.cpp",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-hardware-intel-hda:c",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/intel-hda",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
  configs += [ "$zx/public/gn/config:static-libc++" ]
}
