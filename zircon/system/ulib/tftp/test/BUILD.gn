import("$zx/public/gn/fuzzer.gni")

group("test") {
  testonly = true
  deps = [
    ":tftp-fuzzer",
    ":tftp-test",
  ]
}

zx_test("tftp-test") {
  output_name = "tftp-test"
  sources = [
    "tftp-file-test.cc",
    "tftp-test.cc",
  ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/tftp",
    "$zx/system/ulib/unittest",
  ]
  include_dirs = [ ".." ]
}

fuzzer("tftp-fuzzer") {
  sources = [ "tftp-fuzztest.cc" ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/tftp",
  ]
  include_dirs = [ ".." ]
}
