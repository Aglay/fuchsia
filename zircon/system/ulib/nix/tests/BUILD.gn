assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//src/sys/build/fuchsia_unittest_package.gni")

group("tests") {
  testonly = true
  deps = [
    ":nix-unittest-package",
    ":nix_hosttests($host_toolchain)",
  ]
}

fuchsia_unittest_package("nix-unittest-package") {
  manifest = "meta/nix_test.cmx"
  deps = [ ":nix" ]
}

test("nix") {
  output_name = "nix-test"

  sources = [ "epoll_unittests.cc" ]

  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/nix",
  ]
}

test("nix_hosttests") {
  if (is_linux) {
    sources = [ "epoll_unittests.cc" ]
  }

  deps = [ "//zircon/public/lib/zxtest" ]
}
