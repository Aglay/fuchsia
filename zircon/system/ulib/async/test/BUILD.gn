    "default_tests.cc",
    "dispatcher_tests.cc",
    "executor_tests.cc",
    "irq_tests.cc",
    "main.cc",
    "paged_vmo_tests.cc",
    "receiver_tests.cc",
    "task_tests.cc",
    "time_tests.cc",
    "trap_tests.cc",
    "wait_tests.cc",
