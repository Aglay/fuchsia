import("$zx_build/public/gn/library_shim.gni")

zx_library("syslog") {
  sdk = "shared"
  sdk_publishable = true
  sdk_headers = [
    "lib/syslog/global.h",
    "lib/syslog/logger.h",
    "lib/syslog/wire_format.h",
  ]
  shared = true
  sources = [
    "fx_logger.cc",
    "global.cc",
    "logger.cc",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-logger:c",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
  configs += [
    "$zx_build/public/gn/config:static-libc++",
  ]
}
