import("$zx_build/public/gn/library_shim.gni")
import("$zx_build/public/gn/test_shim.gni")

library("buffer") {
  host = true
  sources = []
  static = true

  if (is_fuchsia) {
    sources += [
      "blocking-ring-buffer.cc",
      "ring-buffer.cc",
      "vmo-buffer.cc",
    ]
    public_deps = [
      "$zx/system/ulib/fbl:headers",
      "$zx/system/ulib/fs/operation:headers",
      "$zx/system/ulib/fzl:headers",
      "$zx/system/ulib/zx:headers",
    ]
    deps = [
      "$zx/system/ulib/fbl",
      "$zx/system/ulib/fdio",
      "$zx/system/ulib/fs",
      "$zx/system/ulib/fs/operation",
      "$zx/system/ulib/fzl",
      "$zx/system/ulib/zircon",
      "$zx/system/ulib/zx",
    ]
  }
}

group("test") {
  testonly = true
  deps = [
    ":fs-buffer",
  ]
}

test("fs-buffer") {
  test_group = "fs"
  sources = [
    "test/block-buffer-view-test.cc",
    "test/blocking-ring-buffer-test.cc",
    "test/ring-buffer-test.cc",
    "test/vmo-buffer-test.cc",
  ]
  deps = [
    ":buffer",
    "$zx/system/ulib/zxtest",
  ]
}
