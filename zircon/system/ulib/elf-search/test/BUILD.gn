group("test") {
  testonly = true
  deps = [
    ":elf-search",
  ]
}

zx_library("elf") {
  sources = [
    "elf.c",
  ]
  deps = [
    "$zx/system/ulib/elfload",
    "$zx/system/ulib/zircon",
  ]
  testonly = true
  visibility = [ ":*" ]
}

zx_executable("elf-search-test-helper") {
  sources = [
    "helper.cc",
  ]
  testonly = true
  visibility = [ ":*" ]
}

zx_test("elf-search") {
  sources = [
    "elf-search-test.cc",
  ]
  deps = [
    ":elf",
    "$zx/system/ulib/elf-search",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/test-utils",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
  data_deps = [
    ":elf-search-test-helper",
  ]
}
