import("$zx/public/gn/fuzzer.gni")

group("test") {
  testonly = true
  deps = [
    ":affine",
    ":affine-fuzzer",
  ]
}

test("affine") {
  sources = [
    "ratio.cc",
    "transform.cc",
    "utils.cc",
  ]
  deps = [
    "$zx/system/ulib/affine",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/zxtest",
  ]
}

fuzzer("affine-fuzzer") {
  sources = [
    "affine-fuzzer.cc",
  ]
  deps = [
    "$zx/system/ulib/affine",
  ]
}
