import("$zx_build/public/gn/migrated_targets.gni")

zx_library("fit") {
  sdk = "source"
  sdk_publishable = true
  sdk_headers = [
    "lib/fit/barrier.h",
    "lib/fit/bridge.h",
    "lib/fit/bridge_internal.h",
    "lib/fit/constructors_internal.h",
    "lib/fit/defer.h",
    "lib/fit/function.h",
    "lib/fit/function_internal.h",
    "lib/fit/function_traits.h",
    "lib/fit/in_place_internal.h",
    "lib/fit/nullable.h",
    "lib/fit/optional.h",
    "lib/fit/promise.h",
    "lib/fit/promise_internal.h",
    "lib/fit/result.h",
    "lib/fit/scheduler.h",
    "lib/fit/scope.h",
    "lib/fit/sequencer.h",
    "lib/fit/single_threaded_executor.h",
    "lib/fit/storage_internal.h",
    "lib/fit/source_location.h",
    "lib/fit/string_view.h",
    "lib/fit/thread_checker.h",
    "lib/fit/thread_safety.h",
    "lib/fit/traits.h",
    "lib/fit/utility_internal.h",
    "lib/fit/variant.h",
  ]
  sdk_migrated = true
  host = true
  static = true
  public_configs = [ "$zx_build_config:no_maybe_uninitialized" ]
  sources = [
    "barrier.cc",
    "promise.cc",
    "scheduler.cc",
    "scope.cc",
    "sequencer.cc",
    "single_threaded_executor.cc",
  ]
}

group("tests") {
  testonly = true
  deps = [ "test:tests" ]
}
