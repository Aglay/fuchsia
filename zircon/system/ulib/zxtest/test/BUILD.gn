group("test") {
  testonly = true
  deps = [
    ":zxtest",
    "integration",
  ]
}

test("zxtest") {
  sources = [
    "assertion_test.cpp",
    "event-broadcaster_test.cpp",
    "main.cpp",
    "runner_test.cpp",
    "test-case_test.cpp",
    "test-info_test.cpp",
    "test_test.cpp",
  ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/zxtest",
  ]
  if (is_fuchsia) {
    sources += [ "death-statement_test.cpp" ]

    deps += [
      "$zx/system/ulib/fdio",
      "$zx/system/ulib/fit",
      "$zx/system/ulib/zircon",
      "$zx/system/ulib/zx",
    ]
  }
}
