group("test") {
  testonly = true
  deps = [ ":cobalt-client-unit" ]
}

source_set("collector-test") {
  testonly = true
  sources = [
    "cobalt_logger_test.cc",
    "collector_test.cc",
  ]
  include_dirs = [ "../include/" ]
  deps = [
    "$zx/system/fidl/fuchsia-cobalt:llcpp",
    "$zx/system/ulib/async:async-cpp",
    "$zx/system/ulib/async:async-default",
    "$zx/system/ulib/async-loop",
    "$zx/system/ulib/async-loop:async-loop-cpp",
    "$zx/system/ulib/async-loop:async-loop-default.static",
    "$zx/system/ulib/cobalt-client:cobalt-collector",
    "$zx/system/ulib/cobalt-client:in-memory-logger",
    "$zx/system/ulib/fidl-async:fidl-async-cpp",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zxtest",
  ]
}

source_set("metrics-test") {
  testonly = true
  sources = [
    "counter_test.cc",
    "histogram_test.cc",
    "metric_options_test.cc",
  ]
  include_dirs = [ "../include/" ]
  deps = [
    "$zx/system/ulib/cobalt-client:cobalt-collector",
    "$zx/system/ulib/cobalt-client:cobalt-metrics",
    "$zx/system/ulib/cobalt-client:cobalt-types-internal",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zxtest",
  ]

  # TODO(42493): UBSan has found an instance of undefined behavior in this target.
  # Disable UBSan for this target temporarily until it is migrated into CI/CQ.
  configs +=
      [ "$zx_build/public/gn/config:temporarily_disable_ubsan_do_not_use" ]
}

source_set("in-memory-logger-test") {
  testonly = true
  sources = [ "in_memory_logger_test.cc" ]
  include_dirs = [ "../include/" ]
  deps = [
    "$zx/system/ulib/cobalt-client:in-memory-logger",
    "$zx/system/ulib/cobalt-client:cobalt-metrics",
    "$zx/system/ulib/zxtest",
  ]
}

zx_test("cobalt-client-unit") {
  sources = []
  deps = [
    ":collector-test",
    ":in-memory-logger-test",
    ":metrics-test",
  ]
}
