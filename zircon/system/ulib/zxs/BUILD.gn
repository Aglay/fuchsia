import("$zx_build/public/gn/library_shim.gni")

library("zxs") {
  sdk = "static"
  sdk_headers = [
    "lib/zxs/protocol.h",
    "lib/zxs/zxs.h",
  ]
  sources = [
    "zxs.cc",
  ]
  configs += [ "$zx_build/public/gn/config:visibility_hidden" ]
  public_deps = [
    # <lib/zxs/zxs.h> has #include <fuchsia/posix/socket/llcpp/fidl.h>.
    "$zx/system/fidl/fuchsia-posix-socket:llcpp.headers",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-posix-socket:llcpp",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}
