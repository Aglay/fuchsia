group("tests") {
  testonly = true
  deps = [
    ":sysconfig-sync-client-test",
  ]
}

library("sysconfig-sync-client") {
  sources = [
    "sync-client.cc",
  ]
  public_deps = [
    "$zx/system/fidl/fuchsia-hardware-skipblock:llcpp",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-sysinfo:llcpp",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

