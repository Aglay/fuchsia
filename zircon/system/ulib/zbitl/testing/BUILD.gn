import("//build/cpp/cpp_fuzzer.gni")

group("testing") {
  testonly = true
  deps = []
  if (is_fuchsia) {
    deps += [ ":zbitl-fuzzers" ]
  }
}

fuzzer_package("zbitl-fuzzers") {
  cpp_fuzzers = [
    ":mem-config",
    ":iteration",
  ]
  fuzz_host = true
}

cpp_fuzzer("iteration") {
  sources = [ "iteration-fuzzer.cc" ]
  deps = [ ".." ]
}

cpp_fuzzer("mem-config") {
  sources = [ "mem-config-fuzzer.cc" ]
  deps = [ ".." ]
}
