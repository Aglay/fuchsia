import("//build/cpp/cpp_fuzzer.gni")

group("testing") {
  testonly = true
  deps = []
  if (is_fuchsia) {
    deps += [ ":zbitl-fuzzers" ]
  }
}

fuzzer_package("zbitl-fuzzers") {
  cpp_fuzzers = [ ":iteration" ]
}

cpp_fuzzer("iteration") {
  sources = [ "iteration-fuzzer.cc" ]
  deps = [ ".." ]
}
