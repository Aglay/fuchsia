import("//build/zircon/migrated_targets.gni")

zx_library("runtime") {
  sources = [ "thread.c" ]
  sdk = "source"
  sdk_headers = [
    "runtime/thread.h",
    "runtime/tls.h",
  ]
  sdk_migrated = true

  deps = [
    "//zircon/system/ulib/elf-psabi",
    "//zircon/system/ulib/zircon",
  ]

  configs += [
    # This code is used in early startup, where safe-stack is not ready yet.
    "//build/config/zircon:no_sanitizers",
  ]
}
