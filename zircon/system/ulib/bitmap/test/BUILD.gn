import("$zx/public/gn/fuzzer.gni")
group("test") {
  testonly = true
  deps = [
    ":bitmap",
    ":raw-bitmap-fuzzer",
  ]
}

zx_test("bitmap") {
  sources = [
    "raw-bitmap-tests.cc",
    "rle-bitmap-tests.cc",
  ]
  deps = [
    "$zx/system/ulib/bitmap",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/unittest",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}
fuzzer("raw-bitmap-fuzzer") {
  sources = [ "raw-bitmap-fuzzer.cc" ]
  deps = [ "$zx/system/ulib/bitmap" ]
}
