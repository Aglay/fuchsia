zx_library("operation") {
  host = true
  sources = []
  static = true

  sdk = "source"
  sdk_headers = [
    "storage/operation/unbuffered_operations_builder.h",
    "storage/operation/operation.h",
    "storage/operation/buffered_operation.h",
  ]

  if (is_fuchsia) {
    sources += [
      "buffered_operation.cc",
      "unbuffered_operations_builder.cc",
    ]
    public_deps = [
      "$zx/system/ulib/fbl:headers",
      "$zx/system/ulib/zircon:headers",
      "$zx/system/ulib/zx:headers",
    ]
    deps = [
      "$zx/system/ulib/fbl",
      "$zx/system/ulib/fdio",
      "$zx/system/ulib/fit",
      "$zx/system/ulib/range",
      "$zx/system/ulib/zircon",
      "$zx/system/ulib/zx",
    ]
  }
}

group("test") {
  testonly = true
  deps = [ ":storage_operation" ]
}

zx_test("storage_operation") {
  test_group = "storage"
  output_name = "storage-operation-test"
  sources = [ "test/unbuffered_operations_builder_test.cc" ]
  deps = [
    ":operation",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zxtest",
  ]
}
