import("$zx_build/public/gn/library_shim.gni")

library("log-writer-textfile") {
  shared = true
  host = true
  sources = [
    "log-writer-textfile.cc",
  ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/log",
  ]
  configs += [ "$zx_build/public/gn/config:static-libc++" ]

  # TODO(31763): Remove this and manually add __EXPORT to symbols that should
  # have default visibility.
  configs -= [ "$zx_build/public/gn/config:visibility_hidden" ]
}
