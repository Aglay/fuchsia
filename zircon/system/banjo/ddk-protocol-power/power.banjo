library ddk.protocol.power;

using zx;

enum PowerDomainStatus : uint8 {
    DISABLED = 1;
    ENABLED =  2;
};

[Layout = "ddk-protocol"]
protocol Power {
    EnablePowerDomain() -> (zx.status s);
    DisablePowerDomain() -> (zx.status s);
    GetPowerDomainStatus() -> (zx.status s, PowerDomainStatus status);
};
