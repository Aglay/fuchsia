group("test") {
  testonly = true
  deps = [ ":display-core-unittests" ]
}

zx_test("display-core-unittests") {
  sources = [
    "display-test.cc",
    "fence-test.cc",
    "image-test.cc",
    "integration-test.cc",
  ]
  include_dirs = [ ".." ]
  deps = [
    ":base",
    "$zx/system/banjo/ddk.protocol.composite",
    "$zx/system/banjo/ddk.protocol.platform.device",
    "$zx/system/banjo/ddk.protocol.sysmem",
    "$zx/system/fidl/fuchsia-hardware-display:llcpp",
    "$zx/system/fidl/fuchsia-sysmem:llcpp",
    "$zx/system/ulib/async-testing",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/zircon-internal",
  ]
}

static_library("base") {
  testonly = true
  sources = [
    "base.cc",
    "fidl_client.cc",
    "fidl_client.h",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.composite",
    "$zx/system/banjo/ddk.protocol.platform.bus",
    "$zx/system/banjo/ddk.protocol.platform.device",
    "$zx/system/banjo/ddk.protocol.sysmem",
  ]
  public_deps = [
    "$zx/system/dev/display/display:shared",
    "$zx/system/dev/display/fake:fake-lib",
    "$zx/system/dev/lib/fake-bti",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/dev/sysmem/sysmem:common_srcs",
    "$zx/system/fidl/fuchsia-hardware-display:llcpp",
    "$zx/system/fidl/fuchsia-sysmem:llcpp",
    "$zx/system/ulib/async-testing",
    "$zx/system/ulib/zxtest",
  ]
}
