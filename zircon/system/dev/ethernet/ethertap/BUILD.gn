zx_driver("ethertap") {
  sources = [ "ethertap.cc" ]
  deps = [
    "$zx/system/banjo/ddk.protocol.ethernet",
    "$zx/system/dev/lib/dev-operation",
    "$zx/system/fidl/fuchsia-hardware-ethernet:c",
    "$zx/system/fidl/fuchsia-hardware-ethertap:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

zx_test("ethertap-unittest") {
  testonly = true
  output_name = "ethertap-unittest"
  sources = [
    "ethertap-test.cc",
    "ethertap.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.ethernet",
    "$zx/system/dev/lib/dev-operation",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/fidl/fuchsia-hardware-ethernet:c",
    "$zx/system/fidl/fuchsia-hardware-ethertap:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fidl-utils",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zxtest",
  ]
}
