driver("ahci") {
  deps = [
    ":shared",
  ]
}

group("test") {
  testonly = true
  deps = [
    ":ahci-unittest",
  ]
}

test("ahci-unittest") {
  output_name = "ahci-unittest"
  sources = [
    "test/main.cpp",
  ]
  deps = [
    ":shared",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/zxtest",
  ]
  configs += [ "$zx/public/gn/config:static-libc++" ]
}

source_set("shared") {
  visibility = [ "./*" ]
  sources = [
    "ahci.cpp",
    "sata.cpp",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.block",
    "$zx/system/banjo/ddk.protocol.pci",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}
