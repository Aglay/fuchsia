import("$zx/public/gn/fuzzer.gni")

group("test") {
  testonly = true
  deps = [
    ":ftl",
    ":ftl-integration",
    ":ftl-read-write-fuzzer",
  ]
}

source_set("shared") {
  testonly = true
  sources = [
    "ftl-shell.cc",
    "ndm-ram-driver.cc",
  ]
  public_deps = [
    "$zx/system/dev/block/ftl:common",
    "$zx/system/dev/lib/fake_ddk",
  ]
}

zx_test("ftl") {
  sources = [
    "block_device_test.cc",
    "driver-test.cc",
    "ftl-test.cc",
    "nand_driver_test.cc",
    "nand_operation_test.cc",
    "oob_doubler_test.cc",
  ]
  include_dirs = [ "$zx/system/dev/block/ftl" ]
  deps = [
    ":shared",
    "$zx/system/ulib/unittest",
    "$zx/system/ulib/zxtest",
  ]
}

zx_test("ftl-integration") {
  sources = [
    "ftl_integration_test.cc",
    "ftl_test_observer.cc",
    "integration_main.cc",
    "launch.cc",
  ]
  include_dirs = [ "$zx/system/dev/block/ftl" ]
  deps = [
    "$zx/system/fidl/fuchsia-hardware-block:c",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/devmgr-integration-test",
    "$zx/system/ulib/devmgr-launcher",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/ramdevice-client",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}

fuzzer("ftl-read-write-fuzzer") {
  sources = [ "ftl-fuzzer.cc" ]
  include_dirs = [ "$zx/system/dev/block/ftl" ]
  deps = [ ":shared" ]
}
