    "$zx/system/banjo/ddk.protocol.composite",
    "$zx/system/banjo/ddk.protocol.gpio",
    "$zx/system/banjo/ddk.protocol.pwm",
    "$zx/system/dev/lib/amlogic",
    "$zx/system/fidl/fuchsia-hardware-light:llcpp",
    "$zx/system/ulib/ddk",
