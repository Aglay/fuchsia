  output_name = "aml-securemem-test"
  sources = [
    "test/aml-securemem-test.cc",
  ]
  include_dirs = [ "." ]
  deps = [
    ":common",
    "$zx/system/dev/lib/fake-bti",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/zircon",
