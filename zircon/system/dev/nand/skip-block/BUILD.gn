driver("skip-block") {
  sources = [
    "binding.c",
  ]
  deps = [
    ":common",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/zircon",
  ]
}

source_set("common") {
  sources = [
    "logical-to-physical-map.cpp",
    "skip-block.cpp",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
  public_deps = [
    "$zx/system/banjo/ddk.protocol.badblock",
    "$zx/system/banjo/ddk.protocol.nand",
    "$zx/system/dev/lib/operation",
    "$zx/system/fidl/fuchsia-hardware-skipblock:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
  ]
}

test("skip-block-test") {
  output_name = "skip-block-test"
  sources = [
    "test/logical-to-physical-map-test.cpp",
    "test/skip-block-test.cpp",
  ]
  include_dirs = [ "." ]
  deps = [
    ":common",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zxtest",
  ]
  configs += [ "$zx/public/gn/config:static-libc++" ]
}
