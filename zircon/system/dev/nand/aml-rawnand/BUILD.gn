zx_driver("aml-rawnand") {
  # We need to compile aml-rawnand.cc with the real mmio library here but
  # with the mock-mmio library in the test, so it can't be part of the
  # common source_set.
  sources = [ "aml-rawnand.cc" ]
  deps = [
    ":common",
    "$zx/system/dev/lib/mmio",
  ]
}

source_set("common") {
  sources = [ "onfi.cc" ]
  public_deps = [
    "$zx/system/banjo/ddk.protocol.platform.device",
    "$zx/system/banjo/ddk.protocol.rawnand",
    "$zx/system/dev/lib/amlogic",
    "$zx/system/dev/lib/device-protocol-pdev",
    "$zx/system/dev/lib/device-protocol-platform-device",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}
