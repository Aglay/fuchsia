group("test") {
  testonly = true
  deps = [
    ":intel-hda-test",
    ":pixelbook-eve-test",
  ]
}

source_set("test_libs") {
  visibility = [ ":*" ]
  sources = [
    "audio_test_tools.cc",
    "audio_test_tools.h",
    "board_name.cc",
    "board_name.h",
    "sample_count_sink.cc",
    "sample_count_sink.h",
    "silence_generator.cc",
    "silence_generator.h",
  ]
  public_deps = [
    "$zx/system/fidl/fuchsia-kernel:c",
    "$zx/system/fidl/fuchsia-sysinfo:c",
    "$zx/system/ulib/audio-proto-utils",
    "$zx/system/ulib/audio-utils",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/intel-hda",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxio",
    "$zx/system/ulib/zxtest",
  ]
}

zx_test("intel-hda-test") {
  sources = [ "intel_hda_test.cc" ]
  deps = [ ":test_libs" ]
}

zx_test("pixelbook-eve-test") {
  sources = [ "pixelbook_eve_test.cc" ]
  deps = [ ":test_libs" ]
}
