zx_library("mt8167") {
  sdk = "source"
  sdk_headers = [
    "soc/mt8167/mt8167-audio-in.h",
    "soc/mt8167/mt8167-audio-out.h",
    "soc/mt8167/mt8167-audio-regs.h",
    "soc/mt8167/mt8167-clk-regs.h",
    "soc/mt8167/mt8167-clk.h",
    "soc/mt8167/mt8167-gpio.h",
    "soc/mt8167/mt8167-hw.h",
    "soc/mt8167/mt8167-power-regs.h",
    "soc/mt8167/mt8167-power.h",
    "soc/mt8167/mt8167-sdmmc.h",
    "soc/mt8167/mt8167-usb-phy.h",
    "soc/mt8167/mt8167-usb.h",
  ]
  sources = [
    "mt8167-audio-in.cc",
    "mt8167-audio-out.cc",
  ]
  deps = [
    "$zx/system/dev/lib/mmio",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/hwreg",
    "$zx/system/ulib/zx",
  ]
}

zx_test("mt8167-audio-lib-test") {
  output_name = "mt8167-audio-lib-test"
  sources = [
    "mt8167-audio-in-test.cc",
    "mt8167-audio-in.cc",
  ]
  deps = [
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/dev/lib/mock-mmio-reg",
    "$zx/system/dev/lib/mt8167",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/hwreg",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
