    "modules/dma-mgr.cc",
  ]
  public_deps = [
    "$zx/system/dev/lib/mmio",
    "$zx/system/fidl/fuchsia-camera-common:c",
    "$zx/system/fidl/fuchsia-sysmem:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fit",
