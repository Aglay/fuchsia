source_set("exit") {
  sources = [
    "__cxa_thread_atexit.c",
    "assert.c",
    "at_quick_exit.c",
    "atexit.c",
    "exit.c",
    "quick_exit.c",
  ]
  deps = [
    ":abort",
    "$zx/system/ulib/zircon",
    "$zx/third_party/ulib/musl:musl_internal",
  ]

  configs -= [ "//build/config/zircon:visibility_hidden" ]
}

source_set("abort") {
  sources = [ "abort.c" ]
  deps = [ "$zx/system/ulib/zircon" ]

  configs -= [ "//build/config/zircon:visibility_hidden" ]
}
