assert(current_os == "linux")

zx_library("usbhost") {
  host = true
  static = false
  sources = [ "usbhost.c" ]

  # TODO(fxb/58162): delete the below and fix compiler warnings
  configs += [ "$zx_build_config:Wno-conversion" ]
}

zx_library("usbhost-static") {
  host = true
  static = true
  sdk = "static"
  sdk_headers = [ "usbhost/usbhost.h" ]
  sources = [ "usbhost.c" ]

  # TODO(fxb/58162): delete the below and fix compiler warnings
  configs += [ "$zx_build_config:Wno-conversion" ]
}
