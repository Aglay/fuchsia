import("//build/package.gni")

executable("bin") {
  output_name = "debug_agent"
  sources = [
    "debug_agent.cc",
    "exception_handler.cc",
    "exception_handler.h",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//zircon/public/lib/launchpad",
  ]
}

package("debug_agent") {
  system_image = true
  deps = [
    ":bin",
  ]

  binaries = [ {
        name = "debug_agent"
      } ]
}

executable("debug_agent_unittests") {
  testonly = true

  deps = [
    "//garnet/public/lib/fxl/test:gtest_main",
    "//third_party/gtest",
  ]
}

package("debug_agent_tests") {
  testonly = true
  system_image = true

  package_name = "debug_agent_tests"

  deps = [
    ":debug_agent_unittests",
  ]

  tests = [ {
        name = "debug_agent_unittests"
      } ]
}
