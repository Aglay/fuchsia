import("//build/package.gni")

source_set("lib") {
  visibility = [ ":*" ]

  sources = [
    "runner_impl.cc",
    "runner_impl.h",
  ]

  public_deps = [
    "//garnet/public/lib/component/cpp",
    "//garnet/public/fidl/fuchsia.sys",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

executable("bin") {
  output_name = "guest_runner"

  sources = [
    "main.cc",
  ]

  deps = [
    ":lib",
  ]
}

package("guest_runner") {
  deps = [
    ":bin",
  ]
  binary = "guest_runner"
}
