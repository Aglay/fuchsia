import("//packages/package.gni")

executable("icu_data_provider") {
  sources = [
    "icu_data_provider_impl.cc",
    "icu_data_provider_impl.h",
    "main.cc",
  ]

  deps = [
    "lib",
    "services",
    "//application/lib/app",
    "//lib/ftl",
    "//lib/mtl",
  ]
}

package("icu_data") {
  deps = [ ":icu_data_provider" ]

  binaries = [
    {
      name = "icu_data_provider"
    },
  ]
  resources = [
    {
      path = rebase_path("//third_party/icu/common/icudtl.dat")
      dest = "icu_data/icudtl.dat"
    },
  ]
}
