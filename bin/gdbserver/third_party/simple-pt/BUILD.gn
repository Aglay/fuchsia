source_set("reader") {
  sources = [
    "elf.cc",
    "elf.h",
    "symtab.cc",
    "symtab.h",
  ]

  deps = [
    "//garnet/lib/debugger_utils",
    "//garnet/public/lib/fxl",
    "//third_party/processor-trace/libipt",
  ]
}

source_set("printer") {
  sources = [
    "call-printer.cc",
    "call-printer.h",
    "instruction.cc",
    "instruction.h",
    "printer-util.cc",
    "printer-util.h",
  ]

  deps = [
    "//garnet/lib/debugger_utils",
    "//garnet/bin/gdbserver/lib/intel-pt-decode",
    "//garnet/public/lib/fxl",
    "//third_party/processor-trace/libipt",
  ]

  if (!is_fuchsia) {
    deps += [ "//zircon/system/public" ]
  }
}
