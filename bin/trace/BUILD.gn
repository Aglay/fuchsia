executable("trace") {
  sources = [
    "main.cc",
  ]

  deps = [
    ":trace_app",
  ]
}

source_set("trace_app") {
  sources = [
    "app.cc",
    "app.h",
    "command.cc",
    "command.h",
    "commands/dump_provider.cc",
    "commands/dump_provider.h",
    "commands/list_categories.cc",
    "commands/list_categories.h",
    "commands/list_providers.cc",
    "commands/list_providers.h",
    "commands/record.cc",
    "commands/record.h",
    "tracer.h",
    "tracer.cc"
  ]

  public_deps = [
    "//apps/modular/lib/app",
    "//apps/tracing/lib/trace:reader",
    "//apps/tracing/lib/trace:internal_fields",
    "//apps/tracing/lib/trace_converters:chromium",
    "//apps/tracing/services",
    "//lib/ftl",
    "//lib/mtl",
  ]
}
