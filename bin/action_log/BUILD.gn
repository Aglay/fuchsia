import("//build/package.gni")

package("action_log") {
  deps = [
    ":bin",
  ]

  binary = "action_log"
}

executable("bin") {
  output_name = "action_log"

  sources = [
    "action_log_data.cc",
    "action_log_data.h",
    "action_log_impl.cc",
    "action_log_impl.h",
    "action_log_main.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/public/lib:maxwell",
    "//peridot/public/lib:maxwell",
    "//peridot/public/lib:modular",
    "//peridot/public/lib:maxwell",
    "//third_party/rapidjson",
  ]
}
