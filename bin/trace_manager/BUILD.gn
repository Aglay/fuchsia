group("tracing") {
  deps = [
    "//apps/tracing/lib/measure",
    "//apps/tracing/lib/trace",
    "//apps/tracing/lib/trace_converters",
    "//apps/tracing/services",
    "//apps/tracing/src/ktrace_provider",
    "//apps/tracing/src/trace",
    "//apps/tracing/src/trace_manager",
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":trace_tests",
    "//apps/tracing/lib/trace:trace_stub_tests",
  ]
}

executable("trace_tests") {
  testonly = true

  deps = [
    "//apps/tracing/lib/measure:unittests",
    "//apps/tracing/lib/trace:unittests",
    "//apps/tracing/src/trace:unittests",
  ]
}
