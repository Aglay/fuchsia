import("//build/go/go_binary.gni")
import("//build/go/go_test.gni")

go_binary("power_manager") {
  gopackage = "apps/power-service/power_manager"
  go_dependencies = [
    {
      package = "apps/power-service/power_manager"
    },
    {
      package = "fidl"
      source = "//garnet/public/lib/fidl/go/src/fidl"
    },
    {
      package = "application/lib/app"
      source = "//application/lib/app/go/src/app"
    },
    {
      package = "application/lib/svc"
      source = "//application/lib/svc/go/src/svc"
    },
  ]
  deps = [
    "//apps/power-service/services",
  ]
}

go_test("power_manager_test") {
  gopackage = "apps/power-service/power_manager"
  go_dependencies = [
    {
      package = "apps/power-service/power_manager"
    },
    {
      package = "application/lib/app"
      source = "//application/lib/app/go/src/app"
    },
    {
      package = "fidl"
      source = "//garnet/public/lib/fidl/go/src/fidl"
    },
    {
      package = "application/lib/svc"
      source = "//application/lib/svc/go/src/svc"
    },
  ]
  deps = [
    "//apps/power-service/services",
  ]
}
