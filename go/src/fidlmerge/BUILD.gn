import("//build/go/go_binary.gni")
import("//build/host.gni")

go_binary("fidlmerge") {
  gopackage = "fidlmerge"

  sdk_category = "internal"

  go_dependencies = [
    {
      package = "fidlmerge"
    },
    {
      package = "fidl"
      source = "//garnet/go/src/fidl"
    },
  ]
}

install_host_tools("host") {
  deps = [
    ":fidlmerge",
  ]
  outputs = [
    "fidlmerge",
  ]
}
