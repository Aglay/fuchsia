import("//build/go/go_binary.gni")
import("//build/go/go_test.gni")
import("//build/host.gni")
import("//build/package.gni")

go_binary("pm_bin") {
  output_name = "pm"
  gopackage = "fuchsia.googlesource.com/pm/cmd/pm"
  go_dependencies = [
    {
      package = "fuchsia.googlesource.com/pm"
    },
    {
      package = "fuchsia.googlesource.com/far"
      source = "//garnet/go/src/far"
    },
    {
      package = "fuchsia.googlesource.com/merkle"
      source = "//garnet/go/src/merkle"
    },
    {
      package = "golang.org/x/crypto"
      source = "//third_party/golang/crypto"
    },
  ]
}
package("pm") {
  system_image = true

  deps = [
    ":pm_bin",
  ]

  binaries = [ {
        name = "pm"
      } ]
}

install_host_tools("host") {
  deps = [
    ":pm_bin",
  ]
  outputs = [
    "pm",
  ]
}

# The following group is temporary until the change that split pmd and pm makes
# it through the layer rollers. This target is referenced by //build, and can
# be removed once (https://fuchsia-review.googlesource.com/c/build/+/109635) is
# submitted.
group("pkgsvr_bin") {
  public_deps = [ "//garnet/go/src/pmd:pkgsvr_bin" ]
}