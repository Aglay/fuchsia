import("//build/fidl/fidl.gni")

group("fidl-changes") {
  deps = [
    ":fidl.test.after",
    ":fidl.test.before",
    "cpp",
    "go",
    "rust",
  ]
}

fidl("fidl.test.before") {
  # Temporarily disable known FIDL lint violations in this target
  excluded_checks = [ "event-names-must-start-with-on" ]

  sources = [
    "fidl/before.fidl",
  ]
}

fidl("fidl.test.during") {
  # Temporarily disable known FIDL lint violations in this target
  excluded_checks = [ "event-names-must-start-with-on" ]

  sources = [
    "fidl/during.fidl",
  ]
}

fidl("fidl.test.after") {
  # Temporarily disable known FIDL lint violations in this target
  excluded_checks = [ "event-names-must-start-with-on" ]

  sources = [
    "fidl/after.fidl",
  ]
}
