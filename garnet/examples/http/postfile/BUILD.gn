import("//build/package.gni")

executable("bin") {
  output_name = "postfile"

  sources = [
    "postfile.cc",
  ]

  deps = [
    "//sdk/fidl/fuchsia.net.oldhttp",
    "//garnet/public/lib/component/cpp",
    "//sdk/lib/fidl/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

package("postfile") {
  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "postfile"
      shell = true
    },
  ]
}
