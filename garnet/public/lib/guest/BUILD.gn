import("//build/package.gni")
import("//build/test/test_package.gni")

source_set("guest") {
  sources = [
    "scenic_wayland_dispatcher.cc",
    "scenic_wayland_dispatcher.h",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.guest",
    "//sdk/fidl/fuchsia.sys",
    "//sdk/fidl/fuchsia.ui.app",
    "//sdk/fidl/fuchsia.wayland",
    "//sdk/lib/sys/cpp",
    "//src/lib/fxl",
  ]
}

executable("guest_lib_unittests") {
  visibility = [ ":*" ]
  testonly = true

  sources = [
    "scenic_wayland_dispatcher_unittest.cc",
  ]

  deps = [
    ":guest",
    "//garnet/public/lib/gtest",
    "//sdk/lib/sys/cpp/testing:unit",
    "//third_party/googletest:gtest_main",
  ]
}

test_package("guest_lib_tests") {
  deps = [
    ":guest_lib_unittests",
  ]

  tests = [
    {
      name = "guest_lib_unittests"
      environments = basic_envs
    },
  ]
}
