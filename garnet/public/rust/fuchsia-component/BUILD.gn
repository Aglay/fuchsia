# Soft transition for out-of-tree Rust
#
# TODO(bwb): Remove when all code is migrated away from using these paths

group("fuchsia-component") {
  deps = [
    "//src/lib/fuchsia-component",
  ]
}

copy("fuchsia-component_info") {
  deps = [
    "//src/lib/fuchsia-component:fuchsia-component_info",
  ]
  sources = [
    "$root_out_dir/obj/src/lib/fuchsia-component/fuchsia-component_info.json",
  ]
  outputs = [
    "$root_out_dir/obj/garnet/public/rust/fuchsia-component/fuchsia-component_info.json",
  ]
}
