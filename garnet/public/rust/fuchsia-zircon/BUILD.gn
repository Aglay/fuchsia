# Soft transition for out-of-tree Rust
#
# TODO(bwb): Remove when all code is migrated away from using these paths

group("fuchsia-zircon") {
  deps = [
    "//src/lib/zircon/rust:fuchsia-zircon",
  ]
}

copy("fuchsia-zircon_info") {
  deps = [
    "//src/lib/zircon/rust:fuchsia-zircon_info",
  ]
  sources = [
    "$root_out_dir/obj/src/lib/zircon/rust/fuchsia-zircon_info.json",
  ]
  outputs = [
    "$root_out_dir/obj/garnet/public/rust/fuchsia-zircon/fuchsia-zircon_info.json",
  ]
}
