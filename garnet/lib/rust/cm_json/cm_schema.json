{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "capability-clause": {
      "type": "string",
      "pattern": "^(service|directory)$"
    },
    "path-clause": {
      "type": "string",
      "pattern": "^(/[^/]+)+$",
      "minLength": 1,
      "maxLength": 1024
    },
    "uri-clause": {
      "type": "string",
      "pattern": "^[0-9a-z+\\-\\.]+://.+$",
      "minLength": 1,
      "maxLength": 4096
    },
    "startup-clause": {
      "type": "string",
      "pattern": "^(lazy|eager)$"
    },
    "name-clause": {
      "type": "string",
      "pattern": "^[0-9a-z_\\-\\.]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "relative-id-clause": {
      "type": "object",
      "oneOf": [
        {
          "required": [ "realm" ]
        },
        {
          "required": [ "myself" ]
        },
        {
          "required": [ "child" ]
        }
      ],
      "properties": {
        "realm": {
          "type": "object",
          "title": "Component's realm"
        },
        "myself": {
          "type": "object",
          "title": "Component itself"
        },
        "child": {
          "type": "object",
          "title": "Component's child",
          "properties": {
            "name": {
              "title": "Child name",
              "allOf": [{ "$ref": "#/definitions/name-clause" }]
            }
          }
        }
      }
    }
  },
  "properties": {
    "program": {
      "type": "object",
      "title": "Program information"
    },
    "uses": {
      "type": "array",
      "title": "Used capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "type",
          "source_path",
          "target_path"
        ],
        "properties": {
          "type": {
            "title": "Used capability type",
            "$ref": "#/definitions/capability-clause"
          },
          "source_path": {
            "allOf": [{ "$ref": "#/definitions/path-clause" }],
            "title": "Used capability source path"
          },
          "target_path": {
            "allOf": [{ "$ref": "#/definitions/path-clause" }],
            "title": "Used capability target path"
          }
        }
      }
    },
    "exposes": {
      "type": "array",
      "title": "Exposed capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "type",
          "source_path",
          "source",
          "target_path"
        ],
        "properties": {
          "type": {
            "title": "Exposed capability type",
            "$ref": "#/definitions/capability-clause"
          },
          "source_path": {
            "allOf": [{ "$ref": "#/definitions/path-clause" }],
            "title": "Exposed capability source path"
          },
          "source": {
            "title": "Exposed capability source component",
            "allOf": [ { "$ref": "#/definitions/relative-id-clause" } ]
          },
          "target_path": {
            "allOf": [{ "$ref": "#/definitions/path-clause" }],
            "title": "Exposed capability target path"
          }
        }
      }
    },
    "offers": {
      "type": "array",
      "title": "Offered capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "type",
          "source_path",
          "source",
          "targets"
        ],
        "properties": {
          "type": {
            "title": "Offered capability type",
            "$ref": "#/definitions/capability-clause"
          },
          "source_path": {
            "allOf": [{ "$ref": "#/definitions/path-clause" }],
            "title": "Offered capability source path"
          },
          "source": {
            "type": "object",
            "title": "Offered capability source component",
            "allOf": [ { "$ref": "#/definitions/relative-id-clause" } ]
          },
          "targets": {
            "type": "array",
            "title": "Offered capability targets",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "target_path",
                "child_name"
              ],
              "properties": {
                "target_path": {
                  "allOf": [{ "$ref": "#/definitions/path-clause" }],
                  "title": "Offered capability target path"
                },
                "child_name": {
                  "allOf": [{ "$ref": "#/definitions/name-clause" }],
                  "title": "Offered capability target child name"
                }
              }
            }
          }
        }
      }
    },
    "children": {
      "type": "array",
      "title": "Child components",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "uri",
          "startup"
        ],
        "properties": {
          "name": {
            "allOf": [{ "$ref": "#/definitions/name-clause" }],
            "title": "Child component name"
          },
          "uri": {
            "allOf": [{ "$ref": "#/definitions/uri-clause" }],
            "title": "Child component URI"
          },
          "startup": {
            "allOf": [{ "$ref": "#/definitions/startup-clause" }],
            "title": "Startup mode"
          }
        }
      }
    },
    "facets": {
      "type": "object",
      "title": "Facets",
      "description": "Freeform dictionary containing third-party metadata"
    }
  }
}

