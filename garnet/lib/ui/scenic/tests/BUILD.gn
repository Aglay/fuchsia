group("tests") {
  testonly = true

  public_deps = [
    ":unittests",
  ]
}

source_set("testing_deps") {
  testonly = true
  sources = [
    "scenic_gfx_test.cc",
    "scenic_gfx_test.h",
    "scenic_test.cc",
    "scenic_test.h",
  ]
  public_deps = [
    ":mocks",
    "//garnet/lib/ui/gfx",
    "//garnet/lib/ui/scenic",
    "//garnet/public/lib/gtest",
    "//garnet/public/lib/inspect",
    "//garnet/public/lib/ui/scenic/cpp",
    "//sdk/lib/sys/cpp",
    "//src/lib/fxl",
    "//third_party/googletest:gtest_main",
  ]
}

source_set("dummy_system") {
  sources = [
    "dummy_system.cc",
    "dummy_system.h",
  ]
  deps = [
    "//garnet/lib/ui/scenic",
    "//garnet/public/lib/inspect",
    "//sdk/fidl/fuchsia.ui.scenic",
  ]
}

source_set("mocks") {
  sources = [
    "mocks.cc",
    "mocks.h",
  ]
  deps = [
    ":dummy_system",
    "//garnet/public/lib/inspect",
    "//garnet/lib/ui/gfx",
  ]
}

executable("unittests") {
  output_name = "scenic_unittests"
  testonly = true
  sources = [
    "scenic_unittest.cc",
  ]
  deps = [
    ":dummy_system",
    ":mocks",
    ":testing_deps",
  ]
}
