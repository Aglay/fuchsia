import("//build/go/go_library.gni")

# Do not use these targets directly, instead depend on their dependencies directly.

go_library("lib") {
  name = "amber_forwarding_target"
  deps = [
    "//src/sys/pkg/bin/amber:lib",
  ]
}

group("amber") {
  public_deps = [
    "//src/sys/pkg/bin/amber",
  ]
}

group("pkgfs") {
  public_deps = [
    "//src/sys/pkg/bin/amber:pkgfs",
  ]
}

group("amber_tests") {
  public_deps = [
    "//src/sys/pkg/bin/amber:amber_tests",
  ]
  testonly = true
}

group("config") {
  public_deps = [
    "//src/sys/pkg/bin/amber:config",
  ]
}
