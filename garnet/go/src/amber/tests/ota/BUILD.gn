import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")
import("//build/go/go_test.gni")
import("//build/host.gni")

go_library("system_ota_test_lib") {
  name = "fuchsia.googlesource.com/system_ota_test"
  deps = [
    "//garnet/go/src/pm:pm_lib",
    "//garnet/public/go/third_party:github.com/flynn/go-tuf",
    "//garnet/public/go/third_party:golang.org/x/crypto",
  ]
}

go_binary("system_ota_test_bin") {
  output_name = "system_ota_test"
  gopackage = "fuchsia.googlesource.com/system_ota_test/cmd"

  deps = [
    ":system_ota_test_lib",
  ]
}

install_host_tools("host") {
  deps = [
    ":system_ota_test_bin",
  ]
  outputs = [
    "system_ota_test",
  ]
}
