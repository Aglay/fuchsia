import("//build/package.gni")

group("util") {
  testonly = true
  deps = [
    ":bin",
    ":mdns-util",
  ]
}

package("mdns-util") {
  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "mdns-util"
      shell = true
    },
  ]

  meta = [
    {
      path = rebase_path("meta/mdns-util.cmx")
      dest = "mdns-util.cmx"
    },
  ]
}

executable("bin") {
  output_name = "mdns-util"

  sources = [
    "formatting.cc",
    "formatting.h",
    "main.cc",
    "mdns_impl.cc",
    "mdns_impl.h",
    "mdns_params.cc",
    "mdns_params.h",
  ]

  deps = [
    "//sdk/fidl/fuchsia.mdns",
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fostr",
    "//garnet/public/lib/fsl",
    "//src/lib/fxl",
    "//garnet/public/lib/mdns/cpp",
    "//zircon/public/lib/async-loop-cpp",
  ]
}
