import("//build/package.gni")

package("vol") {
  deps = [
    ":vol_bin",
  ]

  binaries = [
    {
      name = "vol"
      shell = true
    },
  ]
}

executable("vol_bin") {
  output_name = "vol"

  sources = [
    "vol_app.cc",
  ]

  deps = [
    "//garnet/public/fidl/fuchsia.media",
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/media/audio",
    "//zircon/public/lib/async-loop-cpp",
  ]
}
