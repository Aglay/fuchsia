import("//build/testing/environments.gni")
import("//garnet/bin/appmgr/integration_tests/sandbox/sandbox_test_package.gni")

group("hub") {
  testonly = true
  deps = [
    ":has_hub",
    ":has_hub_deprecated_shell",
    ":no_hub",
  ]
}

sandbox_test_package("has_hub") {
  sources = [
    "has_hub.cc",
  ]

  deps = [
    "//garnet/bin/appmgr/integration_tests/sandbox:namespace_test",
    "//src/lib/fxl/test:gtest_main",
  ]
  environments = basic_envs
}

sandbox_test_package("has_hub_deprecated_shell") {
  deprecated_shell = "//build"

  sources = [
    "has_hub.cc",
  ]

  deps = [
    "//garnet/bin/appmgr/integration_tests/sandbox:namespace_test",
    "//src/lib/fxl/test:gtest_main",
  ]
  environments = basic_envs
}

sandbox_test_package("no_hub") {
  sources = [
    "no_hub.cc",
  ]

  deps = [
    "//garnet/bin/appmgr/integration_tests/sandbox:namespace_test",
    "//src/lib/fxl/test:gtest_main",
  ]
  environments = basic_envs
}
