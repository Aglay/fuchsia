library banjo.examples.interface;

using zx;

struct Point {
    int32 x;
    int32 y;
};

enum Direction : uint32 {
    Up = 0;
    Down = 1;
    Left = 2;
    Right = 3;
};

[Layout = "ddk-interface"]
interface DrawingInteface {
    Draw(Point p, Direction d) -> ();
    DrawLots(handle<vmo> commands) -> (int32 result, Point p);
}

[Layout = "ddk-protocol"]
interface Drawing {
    RegisterInterface(Drawing drawing_intf) -> ();
    DeregisterInteface() -> ();
    DrawArray(array<Point>:4 points) -> (zx.status rv);
    Describe(string:64 one) -> (string:128 two);
};
