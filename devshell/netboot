### run bootserver for netbooting

## usage: fx netboot [extra bootserver arguments]

set -e

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"/lib/vars.sh
fx-config-read

name_args=()
name="$(get-device-name)"
if [[ -n "$name" ]]; then
  name_args+=("-n" "${name}")
fi

exec "${FUCHSIA_BUILD_DIR}/netboot.sh" "${name_args[@]}" "$@"