import("//build/test/test_package.gni")

executable("pkgfs_meta_mmap_test") {
  testonly = true

  sources = [ "pkgfs_meta_mmap_test.cc" ]

  deps = [
    "//src/lib/files",
    "//src/lib/fxl/test:gtest_main",
    "//third_party/googletest:gtest",
    "//zircon/public/lib/fbl",
  ]
}

test_package("pkgfs-mmap-tests") {
  deps = [ ":pkgfs_meta_mmap_test" ]

  tests = [
    {
      name = "pkgfs_meta_mmap_test"
      environments = basic_envs
      manifest = "meta/pkgfs_meta_mmap_test.cmx"
    },
  ]

  meta = [
    {
      path = "meta/zero_byte_file"
      dest = "zero_byte_file"
    },
    {
      path = "meta/one_byte_file"
      dest = "one_byte_file"
    },
    {
      path = "meta/4095_byte_file"
      dest = "4095_byte_file"
    },
    {
      path = "meta/4096_byte_file"
      dest = "4096_byte_file"
    },
    {
      path = "meta/4097_byte_file"
      dest = "4097_byte_file"
    },
  ]
}

group("tests") {
  testonly = true

  deps = [ ":pkgfs-mmap-tests" ]
}
