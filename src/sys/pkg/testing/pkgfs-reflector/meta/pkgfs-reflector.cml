{
    program: {
        binary: "bin/pkgfs_reflector",
    },
    capabilities: [
        { protocol: "test.pkg.reflector.Reflector" },
        {
            directory: "pkgfs",
            rights: [ "rw*" ],
            path: "/pkgfs",
        },
    ],
    use: [
        { runner: "elf" },
        { protocol: "fuchsia.logger.LogSink" },
    ],
    expose: [
        {
            protocol: "test.pkg.reflector.Reflector",
            from: "self",
        },
        {
            directory: "pkgfs",
            from: "self",
        },
    ],
}
