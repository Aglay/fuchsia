import("//build/package.gni")

executable("bin") {
  output_name = "chrealm"

  sources = [ "main.cc" ]

  deps = [
    "//sdk/lib/syslog/cpp:backend_legacy",
    "//src/lib/fxl",
    "//src/sys/lib/chrealm",
  ]
}

package("chrealm") {
  deps = [ ":bin" ]

  binaries = [
    {
      name = "chrealm"
      shell = true
    },
  ]
}
