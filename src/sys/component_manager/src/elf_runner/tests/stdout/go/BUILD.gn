import("//build/go/go_binary.gni")
import("//build/go/go_library.gni")
import("//src/sys/build/components.gni")

group("go") {
  deps = [
    ":logs-stderr-go",
    ":logs-stdout-and-stderr-go",
    ":logs-stdout-go",
  ]
}

go_library("prints_when_launched_go_lib") {
  sources = [ "src/main.go" ]

  deps = []
}

go_binary("prints_when_launched_go_bin") {
  output_name = "prints_when_launched_go"
  gopackage = "go.fuchsia.dev/fuchsia/src/sys/component_manager/src/elf_runner/tests/stdout/go/src"

  deps = [ ":prints_when_launched_go_lib" ]
}

fuchsia_component("logs-stdout-and-stderr-go") {
  deps = [ ":prints_when_launched_go_bin" ]
  manifest = "meta/logs_stdout_and_stderr_go.cml"
}

fuchsia_component("logs-stdout-go") {
  deps = [ ":prints_when_launched_go_bin" ]
  manifest = "meta/logs_stdout_go.cml"
}

fuchsia_component("logs-stderr-go") {
  deps = [ ":prints_when_launched_go_bin" ]
  manifest = "meta/logs_stderr_go.cml"
}
