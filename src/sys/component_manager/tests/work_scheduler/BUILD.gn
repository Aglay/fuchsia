  source_root = "//src/sys/component_manager/tests/work_scheduler/work_scheduler_integration_test.rs"
  deps = [
    ":work_scheduler_test_hook",
    "//garnet/lib/rust/cm_fidl_translator",
    "//garnet/lib/rust/cm_rust",
    "//garnet/lib/rust/io_util",
