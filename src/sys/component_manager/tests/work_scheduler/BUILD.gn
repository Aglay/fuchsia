  meta = [
    {
      path = rebase_path("meta/work_scheduler_client.cml")
      dest = "work_scheduler_client.cm"
    },
  ]

  binaries = [
    {
      name = "work_scheduler_client"
    },
  ]

  tests = [
    {
      name = "work_scheduler_integration_test"
    },
  ]
}
