rustc_library("work_scheduler_test_hook") {
  name = "work_scheduler_test_hook"
  edition = "2018"
  source_root = "work_scheduler_test_hook.rs"
  deps = [
    "//garnet/lib/rust/cm_rust",
    "//garnet/public/lib/fidl/rust/fidl",
    "//garnet/public/rust/fdio",
