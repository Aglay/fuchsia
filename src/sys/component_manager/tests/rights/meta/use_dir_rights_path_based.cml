// TODO(fxbug.dev/56604): Remove and use use_dir_rights.cml instead once component manager supports
// routing namespace capabilities by path.
// name.
{
    program: {
        binary: "bin/use_dir_rights",
    },
    capabilities: [
        { protocol: "fidl.test.components.Trigger" },
    ],
    use: [
        { runner: "elf" },
        {
            directory: "/read_only",
            rights: [ "r*" ],
        },
        {
            directory: "/read_write",
            rights: [ "rw*" ],
        },
        {
            directory: "/read_write_dup",
            rights: [ "rw*" ],
        },
        {
            directory: "/read_exec",
            rights: [ "rx*" ],
        },
        {
            directory: "/read_admin",
            rights: [
                "admin",
                "r*",
            ],
        },
        {
            directory: "/read_only_after_scoped",
            rights: [ "r*" ],
        },
    ],
    expose: [
        {
            protocol: "fidl.test.components.Trigger",
            from: "self",
        },
    ],
}
