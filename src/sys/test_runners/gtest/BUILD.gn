import("//build/package.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  testonly = true
  name = "gtest_runner"
  with_unit_tests = true
  edition = "2018"

  deps = [
    "//src/sys/test_runners:lib",
  ]
}

package("gtest_runner") {
  testonly = true
  deps = [
    ":bin",
    ":bin_test",
    "//src/sys/component_manager/tests/memfs",
  ]

  binaries = [
    {
      name = "gtest_runner"
    },
    {
      name = "memfs"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/gtest_runner.cml")
      dest = "gtest_runner.cm"
    },
    {
      path = rebase_path("meta/root.cml")
      dest = "root.cm"
    },
    {
      path = rebase_path("meta/memfs.cml")
      dest = "memfs.cm"
    },
  ]
}

group("gtest") {
  testonly = true
  deps = [
    ":gtest_runner",
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":gtest_runner",
  ]
}
