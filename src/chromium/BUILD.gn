group("chromium") {
  public_deps = [
    ":web_engine",
    ":web_runner",
  ]
}

# TODO: Move the prebuilt_package declaration here.
group("web_engine") {
  public_deps = [
    "//topaz/runtime/chromium",
  ]
}

# TODO: Move the prebuilt_package declaration here.
group("web_runner") {
  public_deps = [
    "//topaz/runtime/chromium:web_runner",
  ]
}

group("tests") {
  testonly = true

  # Bug: 40163. Remove the "2" at the end of these tests
  # when we remove the topaz tests.
  deps = [
    ":chromium",
    "web_runner_tests:web_runner_tests2",
  ]
}
