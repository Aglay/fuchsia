import("//build/package.gni")

executable("bin") {
  testonly = true

  output_name = "goldfish_benchmark"

  sources = [ "main.cc" ]

  deps = [
    "//sdk/fidl/fuchsia.hardware.goldfish:fuchsia.hardware.goldfish_c",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/zircon-internal",
    "//zircon/public/lib/zx",
  ]
}

package("goldfish_benchmark") {
  testonly = true

  deps = [ ":bin" ]

  binaries = [
    {
      name = "goldfish_benchmark"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/goldfish_benchmark.cmx")
      dest = "goldfish_benchmark.cmx"
    },
  ]

  binary = "goldfish_benchmark"
}
