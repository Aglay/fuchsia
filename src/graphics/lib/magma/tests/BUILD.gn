group("tests") {
  testonly = true
  public_deps = [
    "//garnet/packages/tests:magma",
  ]
}

# Tests that require a working libvulkan to run.
group("vulkan-tests") {
  testonly = true
  public_deps = [
    # We also need run-test-component to run these tests.
    "//garnet/packages/testing:run_test_component",
    "//garnet/lib/magma/tests:vulkan-tests",
  ]
}
