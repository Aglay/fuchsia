group("compute") {
  deps = [
    "common",
    "common/vk",
    "hotsort",
    "spinel",
    "spinel-rs",
    "spinel/platforms/vk",
  ]
}

group("tests") {
  testonly = true
  public_deps = [
    "hotsort:tests",
    "spinel:tests",
    "tests/vk/vk_subgroup_info",
  ]
  if (current_toolchain != host_toolchain && host_os == "linux") {
    # Force generation of host tests on Linux.
    deps = [
      ":tests($host_toolchain)",
    ]
  }
}
