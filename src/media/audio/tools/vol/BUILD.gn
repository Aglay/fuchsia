import("//build/package.gni")

package("vol") {
  deps = [ ":vol_bin" ]

  binaries = [
    {
      name = "vol"
      shell = true
    },
  ]
}

executable("vol_bin") {
  output_name = "vol"

  sources = [ "vol_app.cc" ]

  deps = [
    "//sdk/fidl/fuchsia.media",
    "//sdk/lib/media/audio/cpp",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/syslog/cpp",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
  ]
}
