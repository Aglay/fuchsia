import("//build/package.gni")

package("audio-effects-ctl") {
  deps = [ ":bin" ]

  binaries = [
    {
      name = "audio-effects-ctl"
      shell = true
    },
  ]
}

executable("bin") {
  output_name = "audio-effects-ctl"
  sources = [ "main.cc" ]
  deps = [
    "//sdk/fidl/fuchsia.media.audio",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/syslog/cpp:backend_legacy",
    "//src/lib/fxl",
  ]
}
