import("//build/package.gni")

package("audio-capture-timestamp-validator") {
  deps = [ ":audio-capture-timestamp-validator-bin" ]

  binaries = [
    {
      name = "audio-capture-timestamp-validator"
      shell = true
    },
  ]
}

executable("audio-capture-timestamp-validator-bin") {
  output_name = "audio-capture-timestamp-validator"

  sources = [ "main.cc" ]

  deps = [
    "//sdk/fidl/fuchsia.media",
    "//sdk/lib/media/audio/cpp",
    "//sdk/lib/sys/cpp",
    "//src/media/audio/lib/analysis",
    "//src/media/audio/lib/clock:clone_mono",
    "//src/media/audio/lib/clock:utils",
    "//src/media/audio/lib/format",
    "//src/media/audio/lib/logging:cli",
    "//src/media/audio/lib/wav",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/fzl",
  ]

  # TODO(fxbug.dev/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}
