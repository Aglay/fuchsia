import("//build/package.gni")
import("//build/test/test_package.gni")

source_set("wav_writer") {
  sources = [
    "wav_writer.cc",
    "wav_writer.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.media",
    "//src/lib/fxl",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fdio",
  ]
}

executable("unittest_bin") {
  visibility = [ ":*" ]
  testonly = true
  output_name = "audio_wav_writer_unittests"

  sources = [
    "wav_writer_unittest.cc",
  ]

  deps = [
    ":wav_writer",
    "//src/lib/fxl/test:gtest_main",
  ]
}

test_package("audio_wav_writer_unittests") {
  deps = [
    ":unittest_bin",
  ]

  tests = [
    {
      name = "audio_wav_writer_unittests"
      environments = basic_envs
    },
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":audio_wav_writer_unittests",
  ]
}
