import("//build/bind/bind.gni")
import("//build/config/fuchsia/rules.gni")

bind_rules("ihda_codecs_hdmi_bind") {
  rules = "hdmi_ihda_codec.bind"
  output = "hdmi_ihda_codec-bind.h"
  deps = [ "//src/devices/bind/fuchsia.intel_hda" ]
  tests = "bind_test.json"
}

group("hdmi") {
  deps = [ ":hdmi-audio-codec" ]
}

driver_module("hdmi-audio-codec") {
  configs += [
    "//build/config:all_source",
    "//build/config/fuchsia:enable_zircon_asserts",
  ]
  configs -= [ "//build/config/fuchsia:no_cpp_standard_library" ]
  configs += [
    "//build/config/fuchsia:static_cpp_standard_library",
    "//build/unification/config:zircon-migrated",
  ]
  sources = [ "hdmi-codec.cc" ]
  deps = [
    ":ihda_codecs_hdmi_bind",
    "//sdk/banjo/ddk.protocol.intelhda.codec",
    "//sdk/banjo/ddk.protocol.pci",
    "//src/devices/lib/driver",
    "//src/lib/ddk",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/system/ulib/audio-driver-proto",
    "//zircon/system/ulib/audio-proto-utils",
    "//zircon/system/ulib/dispatcher-pool",
    "//zircon/system/ulib/intel-hda",
  ]
}

group("tests") {
  testonly = true

  deps = [ ":ihda_codecs_hdmi_bind_test" ]
}
