import("//build/test.gni")
import("//build/test/test_package.gni")
import("//build/unification/images/migrated_manifest.gni")

test("alc5663-test") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  output_name = "alc5663-test"

  sources = [
    "alc5663_test.cc",
    "fake_i2c.cc",
    "fake_i2c.h",
    "i2c_client_test.cc",
  ]
  include_dirs = [ ".." ]
  deps = [
    "//src/media/audio/drivers/alc5663:shared",
    "//zircon/public/lib/zxtest",
    "//zircon/system/dev/lib/fake_ddk",
    "//zircon/system/dev/lib/mock-i2c",
  ]
}

unittest_package("alc5663-test-package") {
  package_name = "alc5663-test"
  deps = [ ":alc5663-test" ]

  tests = [
    {
      name = "alc5663-test"
      environments = basic_envs
    },
  ]
}

group("tests") {
  testonly = true
  deps = [ ":alc5663-test-package" ]
}
