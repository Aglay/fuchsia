import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

source_set("constants") {
  sources = [
    "constants.h",
  ]
}

source_set("mixer") {
  public_configs = [ "..:audio_core_config" ]
  sources = [
    "channel_strip.h",
    "filter.cc",
    "filter.h",
    "gain.cc",
    "gain.h",
    "linear_sampler.cc",
    "linear_sampler.h",
    "mixer.cc",
    "mixer.h",
    "mixer_utils.h",
    "no_op.cc",
    "no_op.h",
    "output_producer.cc",
    "output_producer.h",
    "point_sampler.cc",
    "point_sampler.h",
    "position_manager.cc",
    "position_manager.h",
    "sinc_sampler.cc",
    "sinc_sampler.h",
  ]

  public_deps = [
    ":constants",
    "//sdk/fidl/fuchsia.media",
    "//src/media/audio/lib/logging",
    "//zircon/public/lib/fbl",
  ]

  deps = [
    "//sdk/lib/media/cpp:no_converters",
    "//src/lib/syslog/cpp",
    "//zircon/public/lib/trace",
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":audio_mixer_unittests",
    "test",
  ]
}

test_package("audio_mixer_unittests") {
  deps = [
    ":unittest_bin",
  ]

  tests = [
    {
      name = "audio_mixer_unittests"
      environments = basic_envs
    },
  ]
}

executable("unittest_bin") {
  testonly = true
  output_name = "audio_mixer_unittests"

  sources = [
    "bookkeeping_unittest.cc",
    "channel_strip_unittest.cc",
    "filter_unittest.cc",
    "gain_unittest.cc",
    "output_producer_unittest.cc",
    "position_manager_unittest.cc",
    "sinc_sampler_unittest.cc",
  ]

  deps = [
    ":mixer",
    "//src/lib/fxl/test:gtest_main",
    "//third_party/googletest:gmock",
    "//zircon/public/lib/fbl",
  ]
}
