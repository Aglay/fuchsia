import("//build/package.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

package("mediaplayer_tmp") {
  deps = [
    ":mediaplayer_bin",
  ]

  binaries = [
    {
      name = "mediaplayer_tmp"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/mediaplayer_tmp.cmx")
      dest = "mediaplayer_tmp.cmx"
    },
  ]
}

executable("mediaplayer_bin") {
  output_name = "mediaplayer_tmp"

  sources = [
    "main.cc",
    "player_impl.cc",
    "player_impl.h",
    "source_impl.cc",
    "source_impl.h",
  ]

  deps = [
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/media/timeline",
    "//garnet/public/lib/ui/base_view/cpp",
    "//sdk/fidl/fuchsia.media",
    "//sdk/fidl/fuchsia.mediaplayer",
    "//sdk/fidl/fuchsia.ui.viewsv1",
    "//src/media/playback/mediaplayer_tmp/core",
    "//src/media/playback/mediaplayer_tmp/decode",
    "//src/media/playback/mediaplayer_tmp/demux",
    "//src/media/playback/mediaplayer_tmp/fidl",
    "//src/media/playback/mediaplayer_tmp/graph",
    "//src/media/playback/mediaplayer_tmp/graph_create",
    "//src/media/playback/mediaplayer_tmp/render",
    "//src/media/playback/mediaplayer_tmp/util",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/trace-provider",
    "//zircon/public/lib/zx",
  ]
}
