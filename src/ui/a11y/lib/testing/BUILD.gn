group("testing") {
  testonly = true

  public_deps = [
    ":formatting",
    ":input",
  ]
}

source_set("formatting") {
  testonly = true

  public = [ "formatting.h" ]

  sources = [ "formatting.cc" ]

  public_deps = [
    "//src/ui/lib/glm_workaround",
    "//zircon/public/lib/zx",
  ]
}

source_set("input") {
  testonly = true

  public = [ "input.h" ]

  sources = [ "input.cc" ]

  public_deps = [
    "//sdk/fidl/fuchsia.ui.input",
    "//sdk/fidl/fuchsia.ui.input.accessibility",
    "//src/ui/lib/glm_workaround",
  ]
}
