import("//build/test/test_package.gni")

group("lib") {
  deps = [
    "gesture_manager",
    "tts",
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":a11y_lib_tests",
  ]
}

test_package("a11y_lib_tests") {
  deps = [
    "gesture_manager/tests",
    "tts/tests",
  ]

  tests = [
    {
      name = "tts_manager_tests"
      environments = basic_envs
    },
    {
      name = "gesture_manager_tests"
      environments = basic_envs
    },
  ]
}
