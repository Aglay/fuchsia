{
    program: {
        binary: "bin/root_presenter",
    },
    use: [
        { runner: "elf" },
        {
            directory: "/dev/class/input-report",
            rights: [ "rw*" ],
        },
        {
            directory: "/config/data",
            rights: [ "r*" ],
        },
        {
            protocol: [
                "/svc/fuchsia.accessibility.ColorTransform",
                "/svc/fuchsia.accessibility.Magnifier",
                "/svc/fuchsia.logger.LogSink",
                "/svc/fuchsia.media.sounds.Player",
                "/svc/fuchsia.recovery.FactoryReset",
                "/svc/fuchsia.sys.Environment",
                "/svc/fuchsia.sys.Loader",
                "/svc/fuchsia.tracing.provider.Registry",
                "/svc/fuchsia.ui.activity.Tracker",
                "/svc/fuchsia.ui.pointerinjector.Registry",
                "/svc/fuchsia.ui.policy.accessibility.PointerEventRegistry",
                "/svc/fuchsia.ui.scenic.Scenic",
            ],
        },
    ],
    expose: [
        {
            protocol: [
                "/svc/fuchsia.recovery.FactoryResetStateNotifier",
                "/svc/fuchsia.recovery.ui.FactoryResetCountdown",
                "/svc/fuchsia.ui.brightness.ColorAdjustmentHandler",
                "/svc/fuchsia.ui.input.accessibility.PointerEventRegistry",
                "/svc/fuchsia.ui.input.InputDeviceRegistry",
                "/svc/fuchsia.ui.policy.DeviceListenerRegistry",
                "/svc/fuchsia.ui.policy.DisplayBacklight",
                "/svc/fuchsia.ui.policy.Presenter",
                "/svc/fuchsia.ui.views.accessibility.FocuserRegistry",
            ],
            from: "self",
        },
    ],
}
