import("//build/package.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

group("components") {
  testonly = true

  deps = [ ":cts-package-manager-sample-component" ]
}

executable("bin") {
  output_name = "cts-package-manager-sample"

  sources = [ "hello_world.cc" ]

  deps = [ "//zircon/public/lib/zx" ]
}

executable("bin2") {
  output_name = "cts-package-manager-sample2"

  sources = [ "hello_world2.cc" ]

  deps = [ "//zircon/public/lib/zx" ]
}

package("cts-package-manager-sample-component") {
  deps = [
    ":bin",
    ":bin2",
  ]

  binaries = [
    {
      name = "cts-package-manager-sample"
    },
    {
      name = "cts-package-manager-sample2"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/package-manager-sample.cmx")
      dest = "package-manager-sample.cmx"
    },
    {
      path = rebase_path("meta/package-manager-sample2.cmx")
      dest = "package-manager-sample2.cmx"
    },
  ]
}
