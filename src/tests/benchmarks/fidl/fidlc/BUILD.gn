import("//build/test/test_package.gni")

executable("bin") {
  output_name = "fidlc_microbenchmarks"
  testonly = true
  sources = [ "main.cc" ]
  deps = [
    "//tools/fidl/fidlc:fidl",
    "//zircon/public/lib/fbl",
    "//zircon/system/ulib/perftest",
  ]
}

package("fidlc") {
  testonly = true

  deps = [ ":bin" ]

  binaries = [
    {
      name = "fidlc_microbenchmarks"
      shell = true
    },
  ]
}
