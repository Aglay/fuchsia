    {
      name = "lowpanservice_bin_test"
      environments = basic_envs
    },
    {
      name = "lowpan_spinel_driver_bin_test"
      environments = basic_envs
    },
    {
      name = "spinel_spi_driver_bin_test"
      environments = basic_envs
    },
  ]
