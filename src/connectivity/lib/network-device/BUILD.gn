import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

group("network-device") {
  deps = [ "cpp" ]
}

test_package("netdev-client-tests") {
  deps = [ "cpp:tests" ]
  tests = [
    {
      name = "cpp-test"
      environments = [ qemu_env ]
    },
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":netdev-client-tests",
    "//src/connectivity/network/tun/network-tun",
  ]
}
