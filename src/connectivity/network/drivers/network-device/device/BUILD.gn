import("//build/test/test_package.gni")

# This template allows us to have a different source_set definition for targets that will become a
# driver and targets that will not. Notably, the library's tests and the network-tun component use
# the source_set without the DDK symbols.
template("_split_source") {
  source_set(target_name) {
    defines = [ "_ALL_SOURCE" ]
    sources = [
      "definitions.h",
      "device_interface.cc",
      "device_interface.h",
      "log.h",
      "public/network_device.h",
      "rx_queue.cc",
      "rx_queue.h",
      "session.cc",
      "session.h",
      "status_watcher.cc",
      "status_watcher.h",
      "tx_queue.cc",
      "tx_queue.h",
    ]

    public_deps = [
      "//zircon/public/lib/async-cpp",
      "//zircon/public/lib/fbl",
      "//zircon/public/lib/fidl",
      "//zircon/public/lib/fidl-async-cpp",
      "//zircon/public/lib/fidl-utils",
      "//zircon/public/lib/fzl",
      "//zircon/public/lib/sync",
      "//zircon/system/banjo/ddk.protocol.network.device",
      "//zircon/system/fidl/fuchsia-hardware-network:llcpp",
    ]

    if (invoker.ddk) {
      defines += [ "NETDEV_DDK" ]
      public_deps += [
        "//zircon/public/lib/ddk",
        "//zircon/public/lib/ddktl",
      ]
    } else {
      public_deps += [ "//zircon/public/lib/syslog" ]
    }
  }
}

_split_source("src_ddk") {
  ddk = true
}

_split_source("device") {
  ddk = false
}

group("tests") {
  testonly = true
  deps = [ ":network-device-lib-test" ]
}

executable("test_bin") {
  testonly = true
  output_name = "network-device-lib-test"
  sources = [
    "data_structs-test.cc",
    "network_device-test.cc",
    "status_watcher-test.cc",
    "test_util.cc",
    "test_util.h",
  ]

  deps = [
    ":device",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/fake-bti",
    "//zircon/public/lib/sync",
    "//zircon/public/lib/zxtest",
  ]
}

unittest_package("network-device-lib-test") {
  deps = [ ":test_bin" ]
  tests = [
    {
      name = "network-device-lib-test"
      environments = [ qemu_env ]
    },
  ]
}
