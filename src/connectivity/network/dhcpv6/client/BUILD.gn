import("//build/rust/rustc_binary.gni")
import("//build/test/test_package.gni")

rustc_binary("dhcpv6-client") {
  edition = "2018"
  with_unit_tests = true
  deps = [
    "//sdk/fidl/fuchsia.net:fuchsia.net-rustc",
    "//sdk/fidl/fuchsia.net.dhcpv6:fuchsia.net.dhcpv6-rustc",
    "//src/connectivity/lib/net-declare",
    "//src/connectivity/network/dhcpv6",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/lib/network/fidl_fuchsia_net_ext",
    "//src/lib/network/packet",
    "//src/lib/syslog/rust:syslog",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:log",
    "//third_party/rust_crates:pin-utils",
    "//third_party/rust_crates:rand",
    "//third_party/rust_crates:socket2",
    "//third_party/rust_crates:thiserror",
  ]
  test_deps = [
    "//sdk/fidl/fuchsia.net.name:fuchsia.net.name-rustc",
    "//third_party/rust_crates:matches",
  ]
}

package("client") {
  deps = [ ":dhcpv6-client" ]
  binaries = [
    {
      name = "dhcpv6_client"
      dest = "dhcpv6-client"
    },
  ]
  meta = [
    {
      path = rebase_path("meta/dhcpv6-client.cmx")
      dest = "dhcpv6-client.cmx"
    },
  ]
}

test_package("dhcpv6-client-tests") {
  deps = [ ":dhcpv6-client_test" ]
  tests = [
    {
      name = "dhcpv6_client_bin_test"
    },
  ]
}

group("tests") {
  testonly = true
  deps = [ ":dhcpv6-client-tests" ]
}
