import("//build/rust/rustc_library.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

group("tests") {
  testonly = true
  deps = [
    ":http_client_integration_test",
    "//src/connectivity/network/http_client",
  ]
}

rustc_library("bin") {
  testonly = true
  with_unit_tests = true
  name = "http_client_integration"
  edition = "2018"

  deps = [
    "//garnet/public/lib/fidl/rust/fidl",
    "//garnet/public/rust/fuchsia-async",
    "//garnet/public/rust/fuchsia-component",
    "//garnet/public/rust/fuchsia-runtime",
    "//sdk/fidl/fuchsia.net.oldhttp:fuchsia.net.oldhttp-rustc",
    "//sdk/fidl/fuchsia.sys:fuchsia.sys-rustc",
    "//third_party/rust_crates:failure",
    "//third_party/rust_crates:futures-preview",
    "//third_party/rust_crates:rouille",
    "//zircon/public/fidl/fuchsia-mem:fuchsia-mem-rustc",
  ]
}

test_package("http_client_integration_test") {
  deps = [
    ":bin",
  ]

  tests = [
    {
      name = "http_client_integration_lib_test"
      environments = basic_envs
    },
  ]
}
