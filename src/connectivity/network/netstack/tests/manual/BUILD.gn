import("//build/package.gni")

executable("selecttest") {
  testonly = true

  sources = [ "selecttest.c" ]

  deps = [
    "//sdk/lib/fdio",
    "//src/zircon/lib/zircon",
  ]
}

executable("sockopttest") {
  testonly = true

  sources = [ "sockopttest.c" ]

  deps = [
    "//sdk/lib/fdio",
    "//src/zircon/lib/zircon",
  ]
}

executable("gethostbyname_test") {
  testonly = true

  sources = [ "gethostbyname_test.c" ]

  deps = [
    "//sdk/lib/fdio",
    "//src/zircon/lib/zircon",
  ]
}

package("netstack-manual-tests") {
  testonly = true

  deps = [
    ":gethostbyname_test",
    ":selecttest",
    ":sockopttest",
  ]

  binaries = [
    {
      name = "gethostbyname_test"
      shell = true
    },
    {
      name = "selecttest"
      shell = true
    },
    {
      name = "sockopttest"
      shell = true
    },
  ]
}

group("manual") {
  testonly = true
  deps = [ ":netstack-manual-tests" ]
}
