import("//build/config/fuchsia/rules.gni")
import("//build/driver_package.gni")

driver_module("driver") {
  visibility = [ ":*" ]
  output_name = "rndis-host"

  defines = [ "_ALL_SOURCE" ]
  configs += [ "//build/config/fuchsia:enable_zircon_asserts" ]
  configs -= [ "//build/config/fuchsia:no_cpp_standard_library" ]
  configs += [ "//build/config/fuchsia:static_cpp_standard_library" ]

  sources = [
    "rndis_host.cc",
    "rndis_host.h",
  ]
  deps = [
    "//sdk/banjo/ddk.protocol.ethernet",
    "//sdk/banjo/ddk.protocol.usb",
    "//sdk/banjo/ddk.protocol.usb.composite",
    "//sdk/banjo/ddk.protocol.usb.request",
    "//src/connectivity/ethernet/lib/rndis",
    "//src/devices/lib/driver",
    "//src/devices/usb/lib/usb",
    "//src/lib/ddk",
    "//src/lib/ddktl",
  ]
}

driver_package("rndis-host") {
  deps = [ ":driver" ]

  drivers = [
    {
      name = "rndis-host.so"
    },
  ]
}
