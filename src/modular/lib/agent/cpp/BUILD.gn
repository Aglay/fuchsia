import("//build/fidl/fidl.gni")

group("cpp") {
  public_deps = [
    ":agent",
  ]
}

source_set("agent") {
  sources = [
    "agent.h",
    "agent.cc",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.modular",
    "//sdk/fidl/fuchsia.sys",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
  ]
}

source_set("unittests") {
  testonly = true
  sources = [
    "agent_unittest.cc",
  ]

  deps = [
    ":agent",
    ":test.modular.agent",
    "//sdk/lib/sys/cpp/testing:unit",
    "//garnet/public/lib/gtest",
    "//third_party/googletest:gtest",
  ]
}

fidl("test.modular.agent") {
  sources = ["testing/agent.test.fidl"]
}