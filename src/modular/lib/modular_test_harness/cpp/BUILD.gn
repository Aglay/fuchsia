    "//garnet/public/lib/svc/cpp",
    "//sdk/fidl/fuchsia.modular.testing",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/sys/cpp/testing:integration",
    "//src/modular/lib/testing:session_shell_impl",
    "//third_party/googletest:gtest",
