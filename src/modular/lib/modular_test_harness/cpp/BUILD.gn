executable("test_harness_fixture_test_bin") {
  testonly = true

  sources = [
    "test_harness_fixture_test.cc",
  ]

  deps = [
    ":test_harness_fixture",
    "//garnet/public/lib/fsl",
    "//sdk/fidl/fuchsia.modular.testing",
    "//sdk/fidl/fuchsia.sys",
    "//sdk/lib/sys/cpp",
