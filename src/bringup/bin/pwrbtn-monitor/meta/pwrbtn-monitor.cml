{
    include: [ "sdk/lib/diagnostics/syslog/client.shard.cml" ],
    program: {
        binary: "bin/pwrbtn-monitor",
    },
    use: [
        { runner: "elf" },
        {
            directory: "input",
            rights: [ "rw*" ],
            path: "/input",
        },
        {
            protocol: [
                "fuchsia.boot.WriteOnlyLog",
                "fuchsia.hardware.power.statecontrol.Admin",
            ],
        },
    ],
}
