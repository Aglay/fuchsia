import("//build/package.gni")

visibility = [
  "//peridot/bin/ledger/*",
  "//src/ledger/*",
]

source_set("lib") {
  sources = [
    "fake_cloud_provider.cc",
    "fake_cloud_provider.h",
    "fake_device_set.cc",
    "fake_device_set.h",
    "fake_page_cloud.cc",
    "fake_page_cloud.h",
    "types.h",
  ]

  public_deps = [
    "//garnet/public/lib/callback",
    "//garnet/public/lib/fxl",
    "//peridot/bin/ledger/fidl/include",
    "//peridot/lib/commit_pack",
