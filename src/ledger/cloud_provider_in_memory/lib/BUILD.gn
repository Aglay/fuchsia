  deps = [
    "//peridot/bin/ledger/fidl_helpers",
    "//peridot/lib/convert",
    "//sdk/fidl/fuchsia.ledger.cloud",
    "//third_party/murmurhash",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
