visibility = [ "//src/ledger/*" ]

source_set("overnet") {
  testonly = true

  sources = [
    "fake_overnet.cc",
    "fake_overnet.h",
    "overnet_factory.cc",
    "overnet_factory.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.overnet",
    "//src/ledger/bin/fidl_helpers",
    "//src/ledger/bin/testing:lib",
    "//src/ledger/lib/callback",
  ]

  deps = [
    "//src/ledger/lib/convert",
    "//src/ledger/lib/logging",
    "//src/ledger/lib/vmo",
    "//third_party/googletest:gtest",
  ]

  configs += [ "//src/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "overnet_factory_unittest.cc",
  ]

  deps = [
    ":overnet",
    "//sdk/fidl/fuchsia.overnet",
    "//src/ledger/bin/environment",
    "//src/ledger/bin/fidl_helpers:message_relay",
    "//src/ledger/bin/testing:lib",
    "//src/ledger/lib/callback",
    "//src/ledger/lib/convert",
    "//src/ledger/lib/logging",
    "//src/ledger/lib/vmo",
    "//third_party/googletest:gtest",
  ]

  configs += [ "//src/ledger:ledger_config" ]
}
