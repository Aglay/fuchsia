    ":object_identifier",
  ]

  extra_configs = [ "//src/ledger:ledger_config" ]
}

flatbuffer("file_index") {
  sources = [
    "file_index.fbs",
  ]

  extra_configs = [ "//src/ledger:ledger_config" ]
}

