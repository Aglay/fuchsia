source_set("crossplatform") {
  sources = [
    "capture.h",
    "set_when_called.cc",
    "set_when_called.h",
  ]
  public_deps = [
    "//zircon/public/lib/fit:fit",
  ]
}

source_set("callback") {
  sources = [
    "ensure_called.h",
    "managed_container.cc",
    "managed_container.h",
    "observer_list.h",
    "operation_serializer.h",
    "waiter.h",
  ]

  public_deps = [
    ":crossplatform",
    "//src/ledger/lib/logging",
    "//src/ledger/lib/memory",
    "//zircon/public/lib/fit",
  ]

  deps = [
    "//src/lib/callback",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "capture_unittest.cc",
    "ensure_called_unittest.cc",
    "managed_container_unittest.cc",
    "observer_list_unittest.cc",
    "operation_serializer_unittest.cc",
    "set_when_called_unittest.cc",
    "waiter_unittest.cc",
  ]

  deps = [
    ":callback",
    "//third_party/googletest:gmock",
    "//third_party/googletest:gtest",
  ]
}
