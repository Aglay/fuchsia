visibility = [
  "//src/modular/bin/*",
  "//peridot/lib/*",
  "//src/ledger/*",
]

source_set("firebase_auth") {
  sources = [
    "firebase_auth.h",
    "firebase_auth_impl.cc",
    "firebase_auth_impl.h",
    "oauth_request_builder.cc",
    "oauth_request_builder.h",
    "oauth_response.cc",
    "oauth_response.h",
  ]

  deps = [
    "//peridot/lib/rapidjson",
    "//src/ledger/bin/cobalt:ledger_metrics_registry_cc",
    "//src/lib/network_wrapper",
  ]

  public_deps = [
    "//peridot/lib/rng",
    "//sdk/fidl/fuchsia.auth",
    "//sdk/fidl/fuchsia.modular.auth",
    "//sdk/fidl/fuchsia.net.oldhttp",
    "//src/lib/backoff",
    "//src/lib/callback",
    "//src/lib/cobalt/cpp:cobalt_logger",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//src/lib/timekeeper",
    "//src/lib/timekeeper:system",
    "//zircon/public/lib/fit",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "firebase_auth_impl_unittest.cc",
    "oauth_request_builder_unittest.cc",
    "oauth_response_unittest.cc",
  ]

  deps = [
    ":firebase_auth",
    "//garnet/public/lib/gtest",
    "//peridot/lib/rapidjson",
    "//src/ledger/lib/firebase_auth/testing",
    "//src/lib/backoff/testing",
    "//src/lib/fsl",
    "//src/lib/timekeeper:testing",
  ]
}
