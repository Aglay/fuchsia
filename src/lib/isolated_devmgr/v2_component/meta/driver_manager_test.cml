{
    include: [ "sdk/lib/diagnostics/syslog/client.shard.cml" ],
    program: {
        binary: "bin/driver_manager",
        args: [
            "--path-prefix",
            "/pkg/",
            "--use-default-loader",
        ],
    },
    capabilities: [
        {
            directory: "dev",
            rights: [ "rw*" ],
            path: "/dev",
        },
    ],
    use: [
        { runner: "elf" },
        {
            protocol: [
                "fuchsia.boot.Arguments",
                "fuchsia.kernel.RootJob",
                "fuchsia.process.Launcher",
                "fuchsia.sys.Launcher",
            ],
        },
    ],
    expose: [
        {
            directory: "dev",
            from: "self",
        },
    ],
}
