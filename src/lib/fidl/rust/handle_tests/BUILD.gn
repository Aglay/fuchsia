import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")

source_set("deps") {
  deps = [
    "//src/lib/fidl/rust/fidl",
    "//src/lib/zircon/rust:fuchsia-zircon-status",
    "//third_party/rust_crates:parking_lot",
  ]
  if (is_fuchsia) {
    deps += [ "//src/lib/zircon/rust:fuchsia-zircon" ]
  }
}

rustc_test("fidl_rust_handle_tests") {
  edition = "2018"
  deps = [ ":deps" ]

  enforce_source_listing = true

  sources = [
    "src/channel.rs",
    "src/lib.rs",
    "src/socket.rs",
  ]
}

# Also build as a library for use in overnet tests.
rustc_library("fidl_handle_tests") {
  name = "fidl_handle_tests"
  edition = "2018"
  deps = [ ":deps" ]

  enforce_source_listing = true

  sources = [
    "src/channel.rs",
    "src/lib.rs",
    "src/socket.rs",
  ]
}
