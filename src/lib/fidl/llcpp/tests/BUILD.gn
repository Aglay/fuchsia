executable("fidl_llcpp_builder_tests_bin") {
  testonly = true

  output_name = "fidl_llcpp_builder_tests"

  sources = [
    "aligned_test.cc",
    "allocator_test.cc",
    "buffer_then_heap_allocator_test.cc",
