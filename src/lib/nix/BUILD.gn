group("tests") {
  testonly = true
  deps = [ "tests" ]
}

config("nix_headers") {
  include_dirs = [ "include" ]
}

static_library("nix") {
  public = [
    "include/sys/epoll.h",
    "include/sys/inotify.h",
  ]
  sources = [
    "epoll.cc",
    "inotify.cc",
  ]
  public_configs = [ ":nix_headers" ]
}
