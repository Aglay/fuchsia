import("//build/package.gni")
import("//build/rust/rustc_library.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

rustc_library("http_sse") {
  version = "0.1.0"
  edition = "2018"
  with_unit_tests = true

  deps = [
    "//garnet/public/rust/fuchsia-hyper",
    "//src/lib/fuchsia-async",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:hyper",
    "//third_party/rust_crates:matches",
    "//third_party/rust_crates:proptest",
    "//third_party/rust_crates:thiserror",
    "//third_party/rust_crates:void",
  ]

  enforce_source_listing = true

  sources = [
    "src/client.rs",
    "src/client_server_tests.rs",
    "src/event.rs",
    "src/lib.rs",
    "src/linealyzer.rs",
    "src/server.rs",
    "src/source.rs",
  ]
}

test_package("rust-http-sse-tests") {
  deps = [ ":http_sse_test" ]

  tests = [
    {
      name = "http_sse_lib_test"
      dest = "http-sse-lib-test"
      environments = basic_envs
    },
  ]
}

group("tests") {
  testonly = true

  deps = [ ":rust-http-sse-tests" ]
}
