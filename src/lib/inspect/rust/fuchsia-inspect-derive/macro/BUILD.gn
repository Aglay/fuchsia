import("//build/rust/rustc_macro.gni")

group("macro") {
  deps = [ ":fuchsia-inspect-derive-macro" ]
}

rustc_macro("fuchsia-inspect-derive-macro") {
  name = "fuchsia_inspect_derive_macro"
  version = "0.1.0"
  edition = "2018"

  deps = [
    "//third_party/rust_crates:proc-macro2",
    "//third_party/rust_crates:quote",
    "//third_party/rust_crates:syn",
  ]

  enforce_source_listing = true

  sources = [ "src/lib.rs" ]
}
