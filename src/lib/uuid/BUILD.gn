import("//build/package.gni")

source_set("uuid") {
  sources = [
    "uuid.cc",
    "uuid.h",
  ]

  deps = [
    "//garnet/public/lib/fxl",
  ]
}

executable("uuid_unittests") {
  testonly = true

  sources = [
    "uuid_unittest.cc",
  ]

  deps = [
    ":uuid",
    "//third_party/googletest:gtest",
    "//third_party/googletest:gtest_main",
  ]
}

package("uuid_tests") {
  testonly = true

  deps = [
    ":uuid_unittests",
  ]

  tests = [
    {
      name = "uuid_unittests"
    },
  ]
}
