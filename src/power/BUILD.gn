group("power") {
  deps = [ ":battery" ]
}

group("battery") {
  deps = [
    "battery-manager",
    "battery-manager/battery-cli",
  ]
}

group("tests") {
  testonly = true
  deps = [
    "battery-manager",
    "battery-manager:tests",
    "battery-manager/battery-cli:tests",
    "power-manager:tests",
    "shutdown-shim/tests",
    "temperature-logger:tests",
  ]
}
