import("//build/rust/rustc_library.gni")
import("//build/rust/rustc_test.gni")

lib_deps = [
  "//src/diagnostics/lib/selectors",
  "//src/lib/inspect/rust/fuchsia-inspect-node-hierarchy",
  "//src/sys/lib/cm_json",
  "//third_party/rust_crates:anyhow",
  "//third_party/rust_crates:json5",
  "//third_party/rust_crates:lazy_static",
  "//third_party/rust_crates:nom",
  "//third_party/rust_crates:regex",
  "//third_party/rust_crates:serde",
  "//third_party/rust_crates:serde_derive",
  "//third_party/rust_crates:serde_json",
]

rustc_library("triage") {
  edition = 2018
  version = "0.0.1"

  deps = lib_deps

  enforce_source_listing = true

  sources = [
    "src/act.rs",
    "src/config.rs",
    "src/config/parse.rs",
    "src/lib.rs",
    "src/metrics.rs",
    "src/metrics/fetch.rs",
    "src/result_format.rs",
    "src/validate.rs",
  ]
}

rustc_test("triage_lib_unittests") {
  deps = [ ":triage" ] + lib_deps

  enforce_source_listing = true

  sources = [
    "src/act.rs",
    "src/config.rs",
    "src/config/parse.rs",
    "src/lib.rs",
    "src/metrics.rs",
    "src/metrics/fetch.rs",
    "src/result_format.rs",
    "src/validate.rs",
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":triage_lib_unittests($host_toolchain)",
    "wasm:tests",
  ]
}
