import("//src/sys/build/components.gni")

executable("puppet") {
  output_name = "log_validator_cpp_puppet"
  testonly = true
  sources = [ "puppet.cc" ]

  deps = [
    "//sdk/fidl/fuchsia.diagnostics.stream:fuchsia.diagnostics.stream",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/syslog/cpp:backend",
    "//sdk/lib/syslog/cpp:cpp",
    "//sdk/lib/syslog/streams/cpp:streams",
    "//sdk/lib/syslog/streams/cpp:streams-encoder",
    "//src/diagnostics/validator/logs/fidl:validate",
    "//src/lib/fsl",
    "//zircon/public/lib/fidl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}

fuchsia_component("log-validator-cpp-puppet") {
  testonly = true
  manifest = "meta/puppet.cmx"
  deps = [ ":puppet" ]
}

fuchsia_component("log-validator-for-cpp") {
  manifest = "meta/validator.cmx"
  deps = [ "../..:log-validator-bin" ]
}

fuchsia_test_package("log-validator-test-cpp") {
  deps = [ ":log-validator-cpp-puppet" ]
  test_components = [ ":log-validator-for-cpp" ]
}

group("tests") {
  testonly = true
  deps = [ ":log-validator-test-cpp" ]
}
