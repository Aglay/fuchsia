source_set("address-descriptor") {
  sources = [ "address_descriptor.cc" ]
  public = [ "address_descriptor.h" ]
  public_deps = [
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fit",
  ]
  deps = [ "//third_party/rapidjson" ]
}

source_set("options") {
  public = [ "options.h" ]
}

source_set("partition") {
  public = [ "partition.h" ]
  deps = [
    ":address-descriptor",
    "//src/storage/volume_image:volume-descriptor",
  ]
}

source_set("fvm-test") {
  testonly = true
  sources = [ "address_descriptor_test.cc" ]
  deps = [
    ":address-descriptor",
    "//src/lib/json_parser",
    "//src/storage/volume_image/serialization:schema",
    "//third_party/googletest:gmock",
    "//third_party/googletest:gtest",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":fvm-test" ]
}
