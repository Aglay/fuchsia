###############################################################################
# SOURCES
###############################################################################
source_set("decoder") {
  sources = [ "decoder.h" ]
}

source_set("encoder") {
  sources = [ "encoder.h" ]
}

source_set("identity_decoder") {
  sources = [ "identity_decoder.h" ]

  deps = [ ":decoder" ]
}

source_set("identity_encoder") {
  sources = [ "identity_encoder.h" ]

  public_deps = [ ":encoder" ]
}

source_set("lz4_decoder") {
  sources = [
    "lz4_decoder.cc",
    "lz4_decoder.h",
    "lz4_utils.h",
  ]

  public_deps = [ "//zircon/public/lib/lz4" ]

  deps = [
    ":decoder",
    ":lz4_utils",
    ":ring_buffer",
    "//src/lib/fxl",
  ]
}

source_set("lz4_encoder") {
  sources = [
    "lz4_encoder.cc",
    "lz4_encoder.h",
    "lz4_utils.h",
  ]

  public_deps = [ "//zircon/public/lib/lz4" ]

  deps = [
    ":encoder",
    ":lz4_utils",
    ":ring_buffer",
    "//sdk/lib/sys/cpp",
  ]
}

source_set("lz4_utils") {
  sources = [ "lz4_utils.h" ]

  public_deps = [
    "//src/developer/forensics/feedback_data:constants",
    "//zircon/public/lib/lz4",
  ]
}

source_set("production") {
  sources = [ "production_encoding.h" ]

  public_deps = [
    ":identity_decoder",
    ":identity_encoder",
  ]
}

source_set("ring_buffer") {
  sources = [
    "ring_buffer.cc",
    "ring_buffer.h",
  ]

  deps = [
    ":lz4_utils",
    "//sdk/lib/syslog/cpp",
  ]
}
