import("//build/rust/rustc_binary.gni")
import("//src/sys/build/components.gni")

fuchsia_component("crasher") {
  component_name = "rust_crasher"

  manifest = "meta/crasher.cmx"

  deps = [ ":crasher_exe" ]
}

rustc_binary("crasher_exe") {
  name = "rust_crasher"
  edition = "2018"

  enforce_source_listing = true

  sources = [ "src/main.rs" ]
}
