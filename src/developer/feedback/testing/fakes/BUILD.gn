import("//build/package.gni")

###############################################################################
# PACKAGES
###############################################################################
package("fake_crash_reporter") {
  binary = "fake_crash_reporter"

  meta = [
    {
      path = "meta/fake_crash_reporter.cmx"
      dest = "fake_crash_reporter.cmx"
    },
  ]

  deps = [ ":fake_crash_reporter_main" ]

  visibility = [
    "//src/developer/feedback/*",
    "//src/developer/exception_broker/tests",
  ]
}

package("fake_data_provider") {
  binary = "fake_data_provider"

  meta = [
    {
      path = "meta/fake_data_provider.cmx"
      dest = "fake_data_provider.cmx"
    },
  ]

  resources = [
    {
      path = "//src/developer/feedback/testing/resources/checkerboard_100.png"
      dest = "checkboard_100.png"
    },
  ]

  deps = [ ":fake_data_provider_main" ]

  visibility = [ "//src/developer/feedback/*" ]
}

package("fake-device-id-provider") {
  binary = "fake_device_id_provider"

  meta = [
    {
      path = "meta/fake_device_id_provider.cmx"
      dest = "fake_device_id_provider.cmx"
    },
  ]

  deps = [ ":fake_device_id_provider_main" ]

  visibility = [ "//src/developer/feedback/*" ]
}

###############################################################################
# EXECUTABLES
###############################################################################
executable("fake_crash_reporter_main") {
  output_name = "fake_crash_reporter"

  sources = [
    "fake_crash_reporter.cc",
    "fake_crash_reporter.h",
    "fake_crash_reporter_main.cc",
  ]

  deps = [
    "//sdk/fidl/fuchsia.feedback",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//src/lib/syslog/cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
  ]
}

executable("fake_data_provider_main") {
  output_name = "fake_data_provider"

  sources = [
    "fake_data_provider.cc",
    "fake_data_provider.h",
    "fake_data_provider_main.cc",
  ]

  deps = [
    "//sdk/fidl/fuchsia.feedback",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//src/developer/feedback/utils:archive",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//src/lib/syslog/cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
    "//zircon/system/fidl/fuchsia-mem",
  ]
}

executable("fake_device_id_provider_main") {
  output_name = "fake_device_id_provider"

  sources = [
    "fake_device_id_provider.cc",
    "fake_device_id_provider.h",
    "fake_device_id_provider_main.cc",
  ]

  deps = [
    "//sdk/fidl/fuchsia.feedback",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//src/lib/syslog/cpp",
    "//src/lib/uuid",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
  ]
}
