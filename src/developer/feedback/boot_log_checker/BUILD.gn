import("//build/config.gni")
import("//build/package.gni")

package("boot_log_checker") {
  deps = [
    ":main",
  ]

  binaries = [
    {
      name = "boot_log_checker"
    },
  ]

  meta = [
    {
      path = "meta/boot_log_checker.cmx"
      dest = "boot_log_checker.cmx"
    },
  ]
}

executable("main") {
  output_name = "boot_log_checker"

  sources = [
    "main.cc",
  ]

  deps = [
    ":src",
    "//garnet/public/lib/async_promise",
    "//garnet/public/lib/syslog/cpp",
    "//sdk/lib/sys/cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
    "//zircon/public/lib/fit",
  ]
}

source_set("src") {
  sources = [
    "reboot_log_handler.cc",
    "reboot_log_handler.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.feedback",
    "//sdk/lib/sys/cpp",
    "//zircon/public/lib/fit",
    "//zircon/system/fidl/fuchsia-net",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/syslog/cpp",
    "//src/lib/fxl",
  ]
}

config_data("config") {
  for_pkg = "sysmgr"

  sources = [
    "config/config.json",
  ]

  outputs = [
    "boot_log_checker.config",
  ]
}
