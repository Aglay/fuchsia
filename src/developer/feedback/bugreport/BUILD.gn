import("//build/package.gni")

package("bugreport") {
  binaries = [
    {
      name = "bugreport"
      shell = true
    },
  ]

  meta = [
    {
      path = "meta/bugreport.cmx"
      dest = "bugreport.cmx"
    },
  ]

  deps = [
    ":main",
  ]
}

executable("main") {
  output_name = "bugreport"

  sources = [
    "main.cc",
  ]

  deps = [
    ":command_line_options",
    ":src",
    "//sdk/lib/sys/cpp",
  ]
}

source_set("command_line_options") {
  sources = [
    "command_line_options.cc",
    "command_line_options.h",
  ]

  deps = [
    "//src/lib/fxl",
  ]
}

source_set("src") {
  sources = [
    "bug_reporter.cc",
    "bug_reporter.h",
  ]

  public_deps = [
    "//sdk/lib/sys/cpp",
  ]

  deps = [
    "//sdk/fidl/fuchsia.feedback",
    "//zircon/public/lib/zx",
  ]
}
