import("//build/config.gni")
import("//build/package.gni")

###############################################################################
# PACKAGES
###############################################################################
package("reboot-info") {
  deps = [ ":main" ]

  binaries = [
    {
      name = "reboot_info"
    },
  ]

  meta = [
    {
      path = "meta/reboot_info.cmx"
      dest = "reboot_info.cmx"
    },
  ]
}

###############################################################################
# EXECUTABLES
###############################################################################
executable("main") {
  output_name = "reboot_info"

  sources = [ "main.cc" ]

  deps = [
    ":src",
    "//sdk/lib/sys/cpp",
    "//src/lib/syslog/cpp",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
    "//zircon/public/lib/fit",
  ]
}

###############################################################################
# SOURCES
###############################################################################
source_set("reboot_reason") {
  sources = [
    "reboot_reason.cc",
    "reboot_reason.h",
  ]

  public_deps = [ "//src/developer/feedback/utils/cobalt" ]

  deps = [ "//src/lib/syslog/cpp" ]

  visibility = [ "//src/developer/feedback/reboot_info/*" ]
}

source_set("src") {
  sources = [
    "reboot_log_handler.cc",
    "reboot_log_handler.h",
  ]

  public_deps = [
    ":reboot_reason",
    "//sdk/fidl/fuchsia.feedback",
    "//sdk/lib/sys/cpp",
    "//src/developer/feedback/utils/cobalt",
    "//zircon/public/lib/fit",
    "//zircon/system/fidl/fuchsia-cobalt",
  ]

  deps = [
    "//src/developer/feedback/utils/fit",
    "//src/lib/files",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//src/lib/syslog/cpp",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/zx",
  ]
}
