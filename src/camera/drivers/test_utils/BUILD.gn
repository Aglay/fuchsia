group("test_utils") {
  public_deps = [
    ":button_checker",
    ":ddk_mock_operators",
    ":fake_buffer_collection",
  ]
  public_configs = [ ":test_utils_config" ]
}

config("test_utils_config") {
  visibility = [ ":*" ]
  include_dirs = [ "." ]
}

source_set("fake_buffer_collection") {
  visibility = [ ":*" ]
  sources = [
    "fake_buffer_collection.cc",
    "fake_buffer_collection.h",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.sysmem:fuchsia.sysmem_c",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/public/lib/safemath",
    "//zircon/public/lib/sync",
    "//zircon/public/lib/zircon-internal",
    "//zircon/system/ulib/image-format",
    "//zircon/system/ulib/syslog",
  ]
}

source_set("button_checker") {
  visibility = [ ":*" ]
  sources = [
    "button_checker.cc",
    "button_checker.h",
  ]
  deps = [
    "//sdk/lib/fdio",
    "//sdk/lib/syslog/cpp",
    "//zircon/public/lib/fbl",
  ]
  public_deps = [
    "//sdk/fidl/fuchsia.hardware.input",
    "//zircon/system/ulib/hid",
    "//zircon/system/ulib/hid-parser",
  ]
}

source_set("ddk_mock_operators") {
  visibility = [ ":*" ]
  sources = [ "ddk_mock_operators.h" ]
  public_deps = [ "//sdk/banjo/fuchsia.hardware.camera.sensor" ]
}
