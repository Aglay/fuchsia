source_set("common") {
  sources = [
    "byte_buffer.cc",
    "byte_buffer.h",
    "device_address.cc",
    "device_address.h",
    "manufacturer_names.cc",
    "manufacturer_names.h",
    "packet.h",
    "test_helpers.h",
  ]

  deps = [
    "//lib/ftl",
  ]
}

executable("tests") {
  testonly = true
  output_name = "common_unittests"

  sources = [
    "byte_buffer_unittest.cc",
    "device_address_unittest.cc",
    "manufacturer_names_unittest.cc",
    "packet_unittest.cc",
  ]

  deps = [
    ":common",
    "//apps/bluetooth/test:test_main",
    "//lib/ftl",
    "//third_party/gtest",
  ]
}
