import("../../boringssl.gni")

# See //third_party/boringssl/crypto/curve25519/CMakeLists.txt
source_set("curve25519") {
  visibility = [ "//third_party/boringssl/*" ]
  sources = [
    "curve25519.c",
    "spake25519.c",
  ]
  if (current_cpu == "x64") {
    sources += [
      "asm/x25519-asm-x86_64.S",
      "x25519-x86_64.c",
    ]
  }
  configs += [ "//third_party/boringssl:internal_config" ]
}
