static_library("hci") {
  sources = [
    "command_channel.cc",
    "command_channel.h",
    "command_packet.cc",
    "command_packet.h",
    "event_packet.cc",
    "event_packet.h",
    "transport.cc",
    "transport.h",
  ]

  public_deps = [
    "//apps/bluetooth/common",
    "//lib/ftl",
    "//lib/mtl",
  ]
}

executable("tests") {
  testonly = true
  output_name = "hci_unittests"

  sources = [
    "command_channel_unittest.cc",
    "packet_unittest.cc",
  ]

  deps = [
    ":hci",
    "//apps/bluetooth/test:test_main",
    "//third_party/gtest",
  ]
}
