import("//build/fuzzing/fuzzer.gni")

group("fuzzer") {
  testonly = true
  deps = [
    ":tests",
    "go",
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":example_fuzzers",
    "go:tests",
  ]
}

fuzzers_package("example_fuzzers") {
  fuzzer_profiles = [
    {
      fuzzers = [
        ":baz_fuzzer",
        ":overflow_fuzzer",
        ":trap_fuzzer",
        ":fuzzed_data_provider_fuzzer",
        ":corpus_fuzzer",
        ":oom_fuzzer",
      ]
      sanitizers = [
        "asan",
        "ubsan",
      ]
      fuzz_host = true
    },
    {
      fuzzers = [
        "rust:toy_example_arbitrary",
        "rust:toy_example_raw_bytes",
        "rust:toy_example_with_main",
      ]
      sanitizers = [ "rust-asan" ]
    },
  ]
}

fuzzer("oom_fuzzer") {
  sources = [ "oom.cc" ]
}

fuzzer("overflow_fuzzer") {
  sources = [ "overflow.cc" ]
}

fuzzer("trap_fuzzer") {
  sources = [ "trap.cc" ]
}

fuzzer("fuzzed_data_provider_fuzzer") {
  sources = [ "fuzzed-data-provider.cc" ]
}

fuzzer("corpus_fuzzer") {
  sources = [ "corpus.cc" ]
}

fuzzer("baz_fuzzer") {
  sources = [ "target.cc" ]
  deps = [ ":baz" ]
}

source_set("baz") {
  sources = [ "baz.cc" ]
  deps = [ "//src/lib/fxl" ]
}
