import("//build/fidl/fidl.gni")
import("//peridot/build/executable_package.gni")

executable_package("hello_app_parent") {
  deps = [
    ":interfaces",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//peridot/public/lib/app_driver/cpp",
  ]

  sources = [
    "hello_app_parent.cc",
  ]
}

executable_package("hello_app_child") {
  deps = [
    ":interfaces",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//peridot/public/lib/app_driver/cpp",
  ]

  sources = [
    "hello_app_child.cc",
  ]
}

fidl("interfaces") {
  name = "hello_world_module"

  sources = [
    "hello.fidl",
  ]
}
