import("//build/package.gni")

executable("bin") {
  output_name = "app"

  sources = [
    "hello_world.cc",
  ]

  deps = [
    "//zircon/public/lib/zx",
  ]
}

executable("bin2") {
  output_name = "app2"

  sources = [
    "hello_world2.cc",
  ]

  deps = [
    "//zircon/public/lib/zx",
  ]
}

package("component_hello_world") {
  deps = [
    ":bin",
    ":bin2",
  ]

  binaries = [
    {
      name = "app"
    },
    {
      name = "app2"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/hello_world.cmx")
      dest = "hello_world.cmx"
    },
  ]
}
