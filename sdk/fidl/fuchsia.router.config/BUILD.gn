import("//build/fidl/fidl.gni")

fidl("fuchsia.router.config") {
  # Temporarily disable known FIDL lint violations in this target
  excluded_checks = [
    "invalid-case-for-constant",
    "invalid-case-for-decl-member",
    "string-bounds-not-specified",
    "vector-bounds-not-specified",
  ]

  sdk_category = "experimental"

  sources = [
    "dns.fidl",
    "event.fidl",
    "lan.fidl",
    "route.fidl",
    "routercfg.fidl",
    "security.fidl",
    "services.fidl",
    "wan.fidl",
    "wireless.fidl",
  ]

  public_deps = [
    "//zircon/public/fidl/fuchsia-net",
  ]
}
