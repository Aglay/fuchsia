library fuchsia.sys2;

/// Identifies a relative component.
xunion RelativeId {
  RealmId realm;
  SelfId myself;
  ChildId child;
};

/// Represents a componentâ€™s containing realm, i.e. the parent component.
table RealmId {
    // TODO(FIDL-592): Remove once no longer required
    1: bool dummy;
};

/// Represents the component itself.
table SelfId {
    // TODO(FIDL-592): Remove once no longer required
    1: bool dummy;
};

/// Represents one of the component's children.
table ChildId {
    1: string:MAX_CHILD_NAME_LENGTH name;
};
