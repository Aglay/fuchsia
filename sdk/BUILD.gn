import("//build/sdk/sdk_documentation.gni")

sdk_documentation("schemas") {
  name = "metadata_schemas"
  category = "partner"

  schemas = [
    "cc_prebuilt_library",
    "cc_source_library",
    "common",
    "dart_library",
    "documentation",
    "fidl_library",
    "host_tool",
    "image",
    "loadable_module",
    "manifest",
    "sysroot",
  ]
  files = []
  foreach(schema, schemas) {
    files += [{
      source = "//build/sdk/meta/$schema.json"
      dest = "meta/schemas/$schema.json"
    }]
  }
}
