    "//third_party/dart-pkg/pub/image",
    "//third_party/dart-pkg/pub/mockito",
    "//third_party/dart-pkg/pub/quiver",
    "//third_party/dart-pkg/pub/test",
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":sl4f_client_tests($host_toolchain)",
  ]
}
