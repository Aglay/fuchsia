import("//build/toolchain/gcc_toolchain.gni")

gcc_toolchain("gcc_${host_cpu}") {
  cc = "gcc"
  cxx = "g++"
  ar = "ar"
  ld = cxx
  strip = "strip"

  toolchain_cpu = host_cpu
  toolchain_os = host_os
}

clang_toolchain("clang_${host_cpu}") {
  cc = "clang"
  cxx = "clang++"
  ld = cxx
  ar = "ar"
  strip = "strip"

  toolchain_cpu = host_cpu
  toolchain_os = host_os
}
